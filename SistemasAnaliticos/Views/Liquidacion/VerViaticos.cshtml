            actualizarSeguro('dropdown-count-g', contadoresDepartamento['Gerencia']);
            actualizarSeguro('dropdown-count-i', contadoresDepartamento['Ingeniería']);
            actualizarSeguro('dropdown-count-j', contadoresDepartamento['Jefatura']);
            actualizarSeguro('dropdown-count-l', contadoresDepartamento['Legal']);
            actualizarSeguro('dropdown-count-o', contadoresDepartamento['Operaciones']);
            actualizarSeguro('dropdown-count-tncr', contadoresDepartamento['Tecnicos NCR']);
            actualizarSeguro('dropdown-count-ti', contadoresDepartamento['Tecnologías de Información']);
            actualizarSeguro('dropdown-count-v', contadoresDepartamento['Ventas']);
        }
