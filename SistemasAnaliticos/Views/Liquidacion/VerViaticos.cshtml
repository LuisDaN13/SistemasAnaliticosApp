    <!-- FILTRADO Y CONTADORES MEJORADOS -->
    <script>
        const viaticosPaginaActual = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.LiquidacionesViaticos));
        const totalPaginas = @Model.TotalPaginas;
        let paginaActual = @Model.PaginaActual;

        const viaticossContainer = document.getElementById("viaticossContainer");
        const pagination = document.getElementById("pagination");

        // Estado global - cargar TODOS los viaticos una sola vez
        let todosLosViaticos = [];
        let viaticosFiltrados = [];

        // Estado de los filtros - ACTUALIZADO CON NUEVOS FILTROS
        let filtrosActivos = {
            tipos: [],
            estados: [],
            departamentos: [], // ← AGREGAR
            fecha: {
                tipo: 'single',
                fechaUnica: null,
                fechaDesde: null,
                fechaHasta: null
            }
        };

        // Mapear estado del backend al frontend
        function mapearEstado(estadoBackend) {
            if (estadoBackend === "Creada") {
                return "Creada";
            } else if (estadoBackend === "Pendiente") {
                return "Pendiente";
            } else if (estadoBackend === "Rechazada") {
                return "Rechazado";
            } else if (estadoBackend === "Aprobada") {
                return "Aprobada";
            }
            return estadoBackend;
        }

        // Cargar TODOS los viaticos del servidor (solo una vez)
        async function cargarTodosLosViaticos() {
            try {
                const response = await fetch('/Liquidacion/ObtenerTodosLosViaticos');
                if (response.ok) {
                    todosLosViaticos = await response.json();
                    return todosLosViaticos;
                } else {
                    console.error('Error al cargar viaticos:', response.status);
                    todosLosViaticos = viaticosPaginaActual;
                    return todosLosViaticos;
                }
            } catch (error) {
                console.error('Error cargando viaticos:', error);
                todosLosViaticos = viaticosPaginaActual;
                return todosLosViaticos;
            }
        }

        // Inicializar contadores con TODAS los viaticos
        async function filtrarViaticos() {
            if (todosLosViaticos.length === 0) {
                await cargarTodosLosViaticos();
            }

            viaticosFiltrados = todosLosViaticos.filter(viatico => {
                // Filtrar por tipo de detalle (usar tipoDetalles)
                const coincideTipo = filtrosActivos.tipos.length === 0 ||
                                   (viatico.tipoDetalles &&
                                    filtrosActivos.tipos.some(tipo =>
                                        viatico.tipoDetalles.includes(tipo)));

                // Filtrar por estado
                const coincideEstado = filtrosActivos.estados.length === 0 ||
                                     filtrosActivos.estados.includes(viatico.estado);

                // Filtrar por departamento
                const coincideDepartamento = filtrosActivos.departamentos.length === 0 ||
                                           (viatico.departamento &&
                                            filtrosActivos.departamentos.includes(viatico.departamento));

                // Filtrar por fecha
                let coincideFecha = true;
                if (filtrosActivos.fecha.tipo === 'single' && filtrosActivos.fecha.fechaUnica) {
                    const fechaUnica = new Date(filtrosActivos.fecha.fechaUnica);
                    const fechaCreacion = new Date(viatico.fechaCreacion);
                    fechaUnica.setHours(0, 0, 0, 0);
                    fechaCreacion.setHours(0, 0, 0, 0);

                    coincideFecha = fechaCreacion.getTime() === fechaUnica.getTime();

                } else if (filtrosActivos.fecha.tipo === 'range' &&
                           filtrosActivos.fecha.fechaDesde &&
                           filtrosActivos.fecha.fechaHasta) {
                    const desde = new Date(filtrosActivos.fecha.fechaDesde);
                    const hasta = new Date(filtrosActivos.fecha.fechaHasta);
                    const fechaCreacion = new Date(viatico.fechaCreacion);
                    desde.setHours(0, 0, 0, 0);
                    hasta.setHours(0, 0, 0, 0);
                    fechaCreacion.setHours(0, 0, 0, 0);

                    coincideFecha = fechaCreacion >= desde && fechaCreacion <= hasta;
                }

                return coincideTipo && coincideEstado && coincideDepartamento && coincideFecha;
            });

            console.log("Viáticos filtrados:", viaticosFiltrados.length);
            return viaticosFiltrados;
        }

        // Función de fallback para contadores usando viaticos locales
        async function inicializarContadoresConViaticosLocales() {
            if (todosLosViaticos.length === 0) {
