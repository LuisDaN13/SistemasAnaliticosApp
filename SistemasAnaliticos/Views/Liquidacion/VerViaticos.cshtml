            actualizarSeguro('count-kilometraje', contadoresTipo['Kilometraje']);
            actualizarSeguro('count-transporte', contadoresTipo['Transporte']);
            actualizarSeguro('count-hospedaje', contadoresTipo['Hospedaje']);
            actualizarSeguro('count-alimentacion', contadoresTipo['Alimentación']);

