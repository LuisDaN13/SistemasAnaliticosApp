                'Kilometraje': 0,
                'Transporte': 0,
                'Hospedaje': 0,
                'Alimentación': 0
            };

            const contadoresEstado = {
                'Aprobada': 0,
                'Pendiente': 0,
                'Rechazado': 0,
                'Creada': 0
            };

            const contadoresDepartamento = {
                'Financiero Contable': 0,
                'Gerencia': 0,
                'Ingeniería': 0,
                'Jefatura': 0,
                'Legal': 0,
                'Operaciones': 0,
                'Tecnicos NCR': 0,
                'Tecnologías de Información': 0,
                'Ventas': 0
            };

            // Contar TODOS los viaticos locales
            todosLosViaticos.forEach(viatico => {
                // Contar por tipo de detalle (usar tipoDetalles, no tipo)
                if (viatico.tipoDetalles && viatico.tipoDetalles !== "Sin detalles") {
                    // Buscar cada tipo en el string concatenado
                    Object.keys(contadoresTipo).forEach(tipo => {
                        if (viatico.tipoDetalles.includes(tipo)) {
                            contadoresTipo[tipo]++;
                        }
                    });
                }

                // Contar por estado
                if (viatico.estado && contadoresEstado.hasOwnProperty(viatico.estado)) {
                    contadoresEstado[viatico.estado]++;
                }

                // Contar por departamento
                if (viatico.departamento && contadoresDepartamento.hasOwnProperty(viatico.departamento)) {
                    contadoresDepartamento[viatico.departamento]++;
                }
            });

            // Función helper para actualizar elementos de forma segura
            function actualizarSeguro(id, valor) {
                const elemento = document.getElementById(id);
                if (elemento) {
                    elemento.textContent = `(${valor})`;
                }
            }

            // Actualizar contadores en la UI de forma segura
