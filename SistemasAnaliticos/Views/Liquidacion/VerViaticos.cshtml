                                <div class="col">
                                    <span class="text-muted fw-bold">Creación:</span>
                                    <span class="text-dark fw-medium ms-1">
                                        ${new Date(viatico.fechaCreacion + "T00:00:00").toLocaleDateString('es-CR')}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pt-2 border-top">
                        <div class="row small d-flex align-items-center flex-wrap justify-content-around" style="gap: 0.5rem; padding-left: 5%; padding-right: 5%;">
                            <div class="col">
                                <span class="text-muted fw-semibold d-block">Jefe:</span>
                                <span class="text-dark fw-medium ms-1 d-block">${viatico.jefe || 'Sin jefe'}</span>
                            </div>
                            <div class="col">
                                <span class="text-muted fw-semibold d-block">Total:</span>
                                <span class="text-dark fw-medium ms-1 d-block">
                                    ₡${viatico.total?.toLocaleString('es-CR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) || '0.00'}
