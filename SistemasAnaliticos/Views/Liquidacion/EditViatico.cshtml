@model SistemasAnaliticos.Entidades.LiquidacionViatico

<h2 class="mb-4">Liquidación de Viáticos #@Model.idViatico</h2>

<div class="card p-4 mb-4">
    <p><strong>Empleado:</strong> @Model.nombreEmpleado</p>
    <p><strong>Departamento:</strong> @Model.departamento</p>
    <p><strong>Jefe:</strong> @Model.jefe</p>
    <p><strong>Fecha:</strong> @Model.fechaCreacion</p>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Detalles</h4>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAgregarDetalle">
        + Agregar Detalle
    </button>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Monto</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Detalles)
        {
            <tr>
                <td>@d.fecha</td>
                <td>@d.tipo</td>
                <td>₡@d.monto.ToString("#,##0.00")</td>
                <td>@d.detalle</td>
            </tr>
        }
    </tbody>
</table>

<h3 class="mt-3">Total: <strong>₡@Model.total.ToString("#,##0.00")</strong></h3>
