    <script>
                document.addEventListener('DOMContentLoaded', function() {
            let currentStep = 1;
            const totalSteps = 5;

            // Elementos del DOM
            const stepCounter = document.getElementById('stepCounter');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            const stepItems = document.querySelectorAll('.step-item');

            // Inicializar
            updateStepDisplay();

            // Navegación entre pasos
            prevBtn.addEventListener('click', function() {
                if (currentStep > 1) {
                    currentStep--;
                    updateStepDisplay();
                }
            });

            nextBtn.addEventListener('click', function() {
                if (currentStep < totalSteps && validateCurrentStep()) {
                    currentStep++;
                    updateStepDisplay();
                }
            });

            // Navegación por el stepper
            stepItems.forEach(item => {
                item.addEventListener('click', function() {
                    const step = parseInt(this.getAttribute('data-step'));
                    if (step <= currentStep) {
                        currentStep = step;
                        updateStepDisplay();
                    }
                });
            });

            // Función para validar el paso actual
            function validateCurrentStep() {
                const currentStepElement = document.getElementById(`step${currentStep}`);
                const requiredFields = currentStepElement.querySelectorAll('[required]');
                let isValid = true;
                let firstInvalidField = null;

                // Validar cada campo requerido
                requiredFields.forEach(field => {
                    const value = field.value.trim();
                    const fieldType = field.type;
                    const tagName = field.tagName.toLowerCase();

                    // Remover clases de error previas
                    field.classList.remove('is-invalid');

                    let fieldValid = true;

                    if (tagName === 'select') {
                        fieldValid = field.value !== '' && field.value !== null;
                    } else if (fieldType === 'number') {
                        fieldValid = value !== '' && !isNaN(value);
                    } else if (fieldType === 'date') {
                        fieldValid = value !== '';
                    } else {
                        fieldValid = value !== '';
                    }

                    if (!fieldValid) {
                        isValid = false;
                        field.classList.add('is-invalid');

                        // Guardar el primer campo inválido para hacer scroll
                        if (!firstInvalidField) {
                            firstInvalidField = field;
                        }
                    }
                });

                // Mostrar mensaje de error si hay campos inválidos
                if (!isValid) {
                    showValidationError('Por favor complete todos los campos requeridos antes de continuar.');

                    // Hacer scroll al primer campo inválido
                    if (firstInvalidField) {
                        firstInvalidField.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        firstInvalidField.focus();
                    }
                } else {
                    hideValidationError();
                }

                return isValid;
            }

            // Función para mostrar mensaje de error
            function showValidationError(message) {
                // Remover mensaje de error previo si existe
                hideValidationError();

                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                errorDiv.innerHTML = `
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;

                const currentStepContent = document.getElementById(`step${currentStep}`);
                currentStepContent.appendChild(errorDiv);
            }

            // Función para ocultar mensaje de error
            function hideValidationError() {
                const currentStepContent = document.getElementById(`step${currentStep}`);
                const existingAlert = currentStepContent.querySelector('.alert');
                if (existingAlert) {
                    existingAlert.remove();
                }
            }

            // Función para actualizar la visualización del paso actual
            function updateStepDisplay() {
                // Actualizar contador
                stepCounter.textContent = `${currentStep}/${totalSteps}`;

                // Mostrar/ocultar contenido de pasos
                document.querySelectorAll('.step-content').forEach((content, index) => {
                    if (index + 1 === currentStep) {
                        content.classList.remove('d-none');
                    } else {
                        content.classList.add('d-none');
                    }
                });

                // Actualizar estado de botones
                prevBtn.disabled = currentStep === 1;

                if (currentStep === totalSteps) {
                    nextBtn.classList.add('d-none');
                    submitBtn.classList.remove('d-none');
                } else {
                    nextBtn.classList.remove('d-none');
                    submitBtn.classList.add('d-none');
                }

                // Actualizar estado visual del stepper
                stepItems.forEach((item, index) => {
                    const stepNumber = index + 1;
                    const stepIcon = item.querySelector('.step-icon');
                    const stepTitle = item.querySelector('.step-title');

                    // Remover todas las clases de estado
                    item.classList.remove('active', 'completed');
                    stepIcon.classList.remove('active', 'completed', 'inactive');

                    // Aplicar clases según el estado
                    if (stepNumber === currentStep) {
                        item.classList.add('active');
                        stepIcon.classList.add('active');
                    } else if (stepNumber < currentStep) {
                        item.classList.add('completed');
                        stepIcon.classList.add('completed');
                    } else {
                        stepIcon.classList.add('inactive');
                    }
                });

                // Limpiar mensajes de error al cambiar de paso
                hideValidationError();

                // Remover clases de error de todos los campos
                document.querySelectorAll('.is-invalid').forEach(field => {
                    field.classList.remove('is-invalid');
                });
            }

            // Agregar estilos CSS para los campos inválidos
            const style = document.createElement('style');
            style.textContent = `
                .is-invalid {
                    border-color: #dc3545 !important;
                    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
                }

                .alert {
                    border-radius: 8px;
                    margin-bottom: 1rem;
                }
            `;
            document.head.appendChild(style);

            // Manejar el switch de hijos
            const hijosSwitch = document.getElementById('hijosSwitch');
            const noHijosInput = document.getElementById('noHijos');

            if (hijosSwitch && noHijosInput) {
                hijosSwitch.addEventListener('change', function() {
                    noHijosInput.disabled = !this.checked;
                    if (!this.checked) {
                        noHijosInput.value = '';
                    }
                });
            }

            // Manejar envío del formulario
            submitBtn.addEventListener('click', function() {
                // Validar TODOS los pasos antes de enviar, no solo el actual
                let allStepsValid = true;
                const invalidFields = [];

                // Validar cada paso y recolectar campos inválidos
                for (let step = 1; step <= totalSteps; step++) {
                    const stepElement = document.getElementById(`step${step}`);
                    const requiredFields = stepElement.querySelectorAll('[required]');

                    requiredFields.forEach(field => {
                        const value = field.value.trim();
                        const fieldType = field.type;
                        const tagName = field.tagName.toLowerCase();

                        let fieldValid = true;

                        if (tagName === 'select') {
                            fieldValid = field.value !== '' && field.value !== null && field.value !== 'Seleccione...';
                        } else if (fieldType === 'number') {
                            fieldValid = value !== '' && !isNaN(value) && Number(value) > 0;
                        } else if (fieldType === 'date') {
                            fieldValid = value !== '';
                        } else if (fieldType === 'checkbox' || fieldType === 'switch') {
                            fieldValid = field.checked;
                        } else {
                            fieldValid = value !== '';
                        }

                        if (!fieldValid) {
                            allStepsValid = false;
                            field.classList.add('is-invalid');
                            invalidFields.push(field);
                        } else {
                            field.classList.remove('is-invalid');
                        }
                    });
                }

                if (allStepsValid) {
                    // Aquí iría la lógica para recopilar todos los datos del formulario
                    const formData = collectFormData();
                    console.log('Formulario enviado:', formData);
                    alert('Empleado creado exitosamente');

                    // Cerrar modal y resetear
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createEmployeeModal'));
                    modal.hide();
                    resetForm();
                } else {
                    // Mostrar mensaje de error
                    showValidationError('Por favor complete todos los campos requeridos en todos los pasos antes de enviar el formulario.');

                    // Hacer scroll al primer campo inválido
                    if (invalidFields.length > 0) {
                        invalidFields[0].scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        invalidFields[0].focus();
                    }
                }
            });

            // Función para recopilar datos del formulario
            function collectFormData() {
                return {
                    // Paso 1: Información Personal
                    firstName: document.getElementById('firstName').value,
                    secondName: document.getElementById('secondName').value,
                    firstLastname: document.getElementById('firstLastname').value,
                    secondLastname: document.getElementById('secondLastname').value,
                    noEmpleado: document.getElementById('noEmpleado').value,
                    noCedula: document.getElementById('noCedula').value,
                    birthDate: document.getElementById('birthDate').value,
                    gender: document.getElementById('gender').value,

                    // Paso 2: Información Demográfica
                    maritalStatus: document.getElementById('maritalStatus').value,
                    tipoSangre: document.getElementById('maritalStatus').value, // Nota: hay dos elementos con el mismo ID
                    tieneHijos: document.getElementById('hijosSwitch').checked,
                    noHijos: document.getElementById('noHijos').value,
                    padecimientosAlergias: document.querySelector('[asp-for="padecimientosAlergias"]').value,

                    // Paso 3: Dirección
                    provincia: document.getElementById('provincia').value,
                    canton: document.getElementById('canton').value,
                    distrito: document.getElementById('distrito').value,
                    direccionExacta: document.querySelector('[asp-for="direccionExacta"]').value,

                    // Paso 4: Información Laboral
                    profesion: document.querySelector('[asp-for="profesion"]').value,
                    puesto: document.querySelector('[asp-for="puesto"]').value,
                    departamento: document.querySelector('[asp-for="departamento"]').value,
                    fechaIngreso: document.querySelector('[asp-for="fechaIngreso"]').value,
                    jefe: document.querySelector('[asp-for="jefe"]').value,
                    salario: document.querySelector('[asp-for="salario"]').value,
                    cuentaIBAN: document.querySelector('[asp-for="cuentaIBAN"]').value,
                    extension: document.querySelector('[asp-for="extension"]').value,

                    // Paso 5: Contacto
                    // Agregar aquí los campos de contacto cuando los agregues
                    emergencyContactName: document.querySelector('[placeholder="Nombre del contacto de emergencia"]').value,
                    emergencyContactPhone: document.querySelector('[placeholder="+506 1234 5678"]').value,
                    emergencyContactRelation: document.getElementById('emergencyContactRelation').value
                };
            }

            // Resetear formulario cuando se cierra el modal
            document.getElementById('createEmployeeModal').addEventListener('hidden.bs.modal', function() {
                resetForm();
            });

            // Función para resetear el formulario
            function resetForm() {
                currentStep = 1;
                updateStepDisplay();

                // Limpiar todos los campos del formulario
                document.querySelectorAll('input, select, textarea').forEach(element => {
                    if (element.type !== 'button') {
                        element.value = '';
                        element.classList.remove('is-invalid');
                    }
                });

                // Resetear el switch de hijos
                if (hijosSwitch && noHijosInput) {
                    hijosSwitch.checked = false;
                    noHijosInput.disabled = true;
                    noHijosInput.value = '';
                }

                // Limpiar mensajes de error
                hideValidationError();
            }
        });
    </script>
