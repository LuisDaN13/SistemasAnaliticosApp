        function cargarProvincias() {
            const selectProvincia = document.getElementById('provincia');
            selectProvincia.innerHTML = '<option value="">Seleccione una provincia</option>';

            provinciasCR.forEach(provincia => {
                const option = document.createElement('option');
                option.value = provincia;
                option.textContent = provincia;
                selectProvincia.appendChild(option);
            });
        }

        async function cargarCantones() {
            const provincia = document.getElementById('provincia').value;
            const selectCanton = document.getElementById('canton');
            const selectDistrito = document.getElementById('distrito');

            // Reset dropdowns
            selectCanton.innerHTML = '<option value="">Cargando cantones...</option>';
            selectCanton.disabled = true;
            selectDistrito.innerHTML = '<option value="">Seleccione cantón primero</option>';
            selectDistrito.disabled = true;

            if (!provincia) return;

            try {
                const cantones = await buscarCantones(provincia);
                selectCanton.innerHTML = '<option value="">Seleccione un cantón</option>';

                // Filtrar y mostrar cantones únicos
                const cantonesUnicos = [];
                const nombresVistos = new Set();

                cantones.forEach(item => {
                    const nombreCanton = item.name || item.display_name.split(',')[0];
                    if (!nombresVistos.has(nombreCanton)) {
                        nombresVistos.add(nombreCanton);
                        cantonesUnicos.push({
                            name: nombreCanton,
                            display_name: item.display_name
                        });
                    }
                });

                cantonesUnicos.forEach(canton => {
                    const option = document.createElement('option');
                    option.value = canton.name;
                    option.textContent = canton.name;
                    option.setAttribute('data-display', canton.display_name);
                    selectCanton.appendChild(option);
                });

                selectCanton.disabled = false;

            } catch (error) {
                selectCanton.innerHTML = '<option value="">Error cargando cantones</option>';
                console.error('Error:', error);
            }
        }

        async function cargarDistritos() {
            const provincia = document.getElementById('provincia').value;
            const canton = document.getElementById('canton').value;
            const selectDistrito = document.getElementById('distrito');

            selectDistrito.innerHTML = '<option value="">Cargando distritos...</option>';
            selectDistrito.disabled = true;

            if (!provincia || !canton) return;

            try {
                const distritos = await buscarDistritos(provincia, canton);
                selectDistrito.innerHTML = '<option value="">Seleccione un distrito</option>';

                // Filtrar distritos únicos
                const distritosUnicos = [];
                const nombresVistos = new Set();

                distritos.forEach(item => {
                    const nombreDistrito = item.name || item.display_name.split(',')[0];
                    if (!nombresVistos.has(nombreDistrito)) {
                        nombresVistos.add(nombreDistrito);
                        distritosUnicos.push({
                            name: nombreDistrito,
                            display_name: item.display_name,
                            lat: item.lat,
                            lon: item.lon
                        });
                    }
                });

                distritosUnicos.forEach(distrito => {
                    const option = document.createElement('option');
                    option.value = distrito.name;
                    option.textContent = distrito.name;
                    option.setAttribute('data-lat', distrito.lat);
                    option.setAttribute('data-lon', distrito.lon);
                    selectDistrito.appendChild(option);
                });

                selectDistrito.disabled = false;

            } catch (error) {
                selectDistrito.innerHTML = '<option value="">Error cargando distritos</option>';
                console.error('Error:', error);
            }
        }

        // Funciones de búsqueda (las mismas del primer ejemplo)
