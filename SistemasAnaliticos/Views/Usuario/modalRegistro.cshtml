    <script>
        // Provincias conocidas de CR
        const provinciasCR = [
            "San José", "Alajuela", "Cartago", "Heredia",
            "Guanacaste", "Puntarenas", "Limón"
        ];

        // Funciones auxiliares seguras - DEFINIR PRIMERO
        function getSafeValue(selector) {
            try {
                const element = document.querySelector(selector);
                if (!element) {
                    return '';
                }
                return element.value || '';
            } catch (error) {
                return '';
            }
        }

        function getSafeChecked(selector) {
            try {
                const element = document.querySelector(selector);
                return element ? element.checked : false;
            } catch (error) {
                return false;
            }
        }

        // Función para recopilar datos del formulario - DEFINIR ANTES DE USAR
        function collectFormData() {
            try {
                const formData = {
                    // Paso 1: Información Personal
                    primerNombre: getSafeValue('#primerNombre'),
                    segundoNombre: getSafeValue('#segundoNombre'),
                    primerApellido: getSafeValue('#primerApellido'),
                    segundoApellido: getSafeValue('#segundoApellido'),
                    noEmpleado: getSafeValue('#noEmpleado'),
                    cedula: getSafeValue('#noCedula'),
                    fechaNacimiento: getSafeValue('input[name="Usuario.fechaNacimiento"]'),
                    genero: getSafeValue('#gender'),

                    licencias: getSafeValue('#licencias'),

                    // Paso 2: Información Demográfica
                    estadoCivil: getSafeValue('#estadoCivil'),
                    tipoSangre: getSafeValue('#tipoSangre'),
                    tieneHijos: getSafeChecked('#hijosSwitch'),
                    noHijos: getSafeValue('#noHijos'),
                    padecimientosAlergias: getSafeValue('#padecimientosAlergias'),

                    // Paso 3: Dirección
                    provincia: getSafeValue('#provincia'),
                    canton: getSafeValue('#canton'),
                    distrito: getSafeValue('#distrito'),
                    direccionExacta: getSafeValue('#direccionExacta'),

                    // Paso 4: Información Laboral
                    profesion: getSafeValue('#profesion'),
                    puesto: getSafeValue('#puesto'),
                    departamento: getSafeValue('#departamento'),
                    fechaIngreso: getSafeValue('#fechaIngreso'),
                    jefe: getSafeValue('#jefe'),
                    salario: getSafeValue('#salario'),
                    cuentaIBAN: getSafeValue('#cuentaIBAN'),
                    extension: getSafeValue('#extension'),

                    // Paso 5: Contacto
                    celularPersonal: getSafeValue('#celularPersonal'),
                    correoPersonal: getSafeValue('#correoPersonal'),
                    contactoEmergencia: getSafeValue('#contactoEmergencia'),
                    telefonoEmergencia: getSafeValue('#telefonoEmergencia'),
                    tipoPariente: getSafeValue('#tipoPariente')
                };

                return formData;

            } catch (error) {
                return null;
            }
        }

        // Esperar a que el DOM esté completamente cargado
        document.addEventListener('DOMContentLoaded', function() {

            // Inicializar componentes en orden
            inicializarStepper();
            cargarProvincias();
            inicializarLicencias();
            inicializarSwitchHijos();
        });

        function cargarProvincias() {
            const selectProvincia = document.querySelector('select[asp-for="provincia"]');
            if (!selectProvincia) {
                return;
            }

            selectProvincia.innerHTML = '<option value="">Seleccione una provincia</option>';
            provinciasCR.forEach(provincia => {
                const option = document.createElement('option');
                option.value = provincia;
                option.textContent = provincia;
                selectProvincia.appendChild(option);
            });
        }

        function inicializarStepper() {
            let currentStep = 1;
            const totalSteps = 5;

            // Elementos del DOM
            const stepCounter = document.getElementById('stepCounter');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            const stepItems = document.querySelectorAll('.step-item');

            // Inicializar
            updateStepDisplay();

            // Navegación entre pasos
            prevBtn.addEventListener('click', function() {
                if (currentStep > 1) {
                    currentStep--;
                    updateStepDisplay();
                }
            });

            nextBtn.addEventListener('click', function() {
                if (currentStep < totalSteps && validateCurrentStep()) {
                    currentStep++;
                    updateStepDisplay();
                }
            });

            // Navegación por el stepper
            stepItems.forEach(item => {
                item.addEventListener('click', function() {
                    const step = parseInt(this.getAttribute('data-step'));
                    if (step <= currentStep) {
                        currentStep = step;
                        updateStepDisplay();
                    }
                });
            });

            function validateCurrentStep() {
                const currentStepElement = document.getElementById(`step${currentStep}`);
                if (!currentStepElement) {
                    console.error(`❌ No se encontró el paso ${currentStep}`);
                    return false;
                }

                const requiredFields = currentStepElement.querySelectorAll('[required]');
                let isValid = true;
                let firstInvalidField = null;

                requiredFields.forEach(field => {
                    const value = field.value ? field.value.trim() : '';
                    const fieldType = field.type;
                    const tagName = field.tagName.toLowerCase();

                    field.classList.remove('is-invalid');

                    let fieldValid = true;

                    if (tagName === 'select') {
                        fieldValid = field.value !== '' && field.value !== null;
                    } else if (fieldType === 'number') {
                        fieldValid = value !== '' && !isNaN(value);
                    } else if (fieldType === 'date') {
                        fieldValid = value !== '';
                    } else if (fieldType === 'checkbox') {
                        fieldValid = field.checked;
                    } else {
                        fieldValid = value !== '';
                    }

                    if (!fieldValid) {
                        isValid = false;
                        field.classList.add('is-invalid');
                        if (!firstInvalidField) {
                            firstInvalidField = field;
                        }
                    }
                });

                if (!isValid) {
                    showValidationError('Por favor complete todos los campos requeridos antes de continuar.');
                    if (firstInvalidField) {
                        firstInvalidField.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        firstInvalidField.focus();
                    }
                } else {
                    hideValidationError();
                }

                return isValid;
            }

            function showValidationError(message) {
                hideValidationError();
                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                errorDiv.innerHTML = `
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;

                const currentStepContent = document.getElementById(`step${currentStep}`);
                if (currentStepContent) {
                    currentStepContent.appendChild(errorDiv);
                }
            }

            function hideValidationError() {
                for (let i = 1; i <= totalSteps; i++) {
                    const stepContent = document.getElementById(`step${i}`);
                    if (stepContent) {
                        const existingAlert = stepContent.querySelector('.alert');
                        if (existingAlert) {
                            existingAlert.remove();
                        }
                    }
                }
            }

            function updateStepDisplay() {
                // Actualizar contador
                if (stepCounter) {
                    stepCounter.textContent = `${currentStep}/${totalSteps}`;
                }

                // Mostrar/ocultar contenido de pasos
                document.querySelectorAll('.step-content').forEach((content, index) => {
                    if (index + 1 === currentStep) {
                        content.classList.remove('d-none');
                    } else {
                        content.classList.add('d-none');
                    }
                });

                // Actualizar estado de botones
                prevBtn.disabled = currentStep === 1;

                if (currentStep === totalSteps) {
                    nextBtn.classList.add('d-none');
                    submitBtn.classList.remove('d-none');
                } else {
                    nextBtn.classList.remove('d-none');
                    submitBtn.classList.add('d-none');
                }

                // Actualizar estado visual del stepper
                stepItems.forEach((item, index) => {
                    const stepNumber = index + 1;
                    const stepIcon = item.querySelector('.step-icon');
                    const stepTitle = item.querySelector('.step-title');

                    item.classList.remove('active', 'completed');
                    stepIcon.classList.remove('active', 'completed', 'inactive');

                    if (stepNumber === currentStep) {
                        item.classList.add('active');
                        stepIcon.classList.add('active');
                    } else if (stepNumber < currentStep) {
                        item.classList.add('completed');
                        stepIcon.classList.add('completed');
                    } else {
                        stepIcon.classList.add('inactive');
                    }
                });

                hideValidationError();
                document.querySelectorAll('.is-invalid').forEach(field => {
                    field.classList.remove('is-invalid');
                });
            }

            // Agregar estilos CSS para los campos inválidos
            const style = document.createElement('style');
            style.textContent = `
                .is-invalid {
                    border-color: #dc3545 !important;
                    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
                }
                .alert {
                    border-radius: 8px;
                    margin-bottom: 1rem;
                }
            `;
            document.head.appendChild(style);

            // Manejar envío del formulario
            submitBtn.addEventListener('click', function(e) {
                e.preventDefault();

                // Validar TODOS los pasos antes de enviar
                let allStepsValid = true;
                const invalidFields = [];

                for (let step = 1; step <= totalSteps; step++) {
                    const stepElement = document.getElementById(`step${step}`);
                    if (!stepElement) continue;

                    const requiredFields = stepElement.querySelectorAll('[required]');

                    requiredFields.forEach(field => {
                        const value = field.value ? field.value.trim() : '';
                        const fieldType = field.type;
                        const tagName = field.tagName.toLowerCase();

                        let fieldValid = true;

                        if (tagName === 'select') {
                            fieldValid = field.value !== '' && field.value !== null;
                        } else if (fieldType === 'number') {
                            fieldValid = value !== '' && !isNaN(value) && Number(value) > 0;
                        } else if (fieldType === 'date') {
                            fieldValid = value !== '';
                        } else if (fieldType === 'checkbox') {
                            fieldValid = field.checked;
                        } else {
                            fieldValid = value !== '';
                        }

                        if (!fieldValid) {
                            allStepsValid = false;
                            field.classList.add('is-invalid');
                            invalidFields.push(field);
                        } else {
                            field.classList.remove('is-invalid');
                        }
                    });
                }

                if (allStepsValid) {
                    const formData = collectFormData();

                    if (formData) {
                        // Aquí puedes enviar el formulario
                        document.getElementById('employeeForm').submit();
                    } else {
                        showValidationError('Error al recolectar los datos del formulario.');
                    }
                } else {
                    showValidationError('Por favor complete todos los campos requeridos en todos los pasos antes de enviar el formulario.');
                    if (invalidFields.length > 0) {
                        invalidFields[0].scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        invalidFields[0].focus();
                    }
                }
            });
        }

        function inicializarLicencias() {
            const checkboxes = document.querySelectorAll('.licencia-checkbox');
            const inputHidden = document.getElementById('licencias');

            let licenciasSeleccionadas = [];

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    if (this.checked) {
                        agregarLicencia(this.value);
                    } else {
                        removerLicencia(this.value);
                    }
                });
            });

            function agregarLicencia(licencia) {
                if (!licenciasSeleccionadas.includes(licencia)) {
                    licenciasSeleccionadas.push(licencia);
                }
            }

            function removerLicencia(licencia) {
                licenciasSeleccionadas = licenciasSeleccionadas.filter(lic => lic !== licencia);
            }

            function validarLicencias() {
                if (licenciasSeleccionadas.length > 0) {
                    inputHidden.classList.remove('is-invalid');
                } else {
                    inputHidden.classList.add('is-invalid');
                }
            }

            // Hacer función global para los tags
            window.removerLicenciaDesdeTag = function(licencia) {
                removerLicencia(licencia);
            };

            validarLicencias();
        }

        function inicializarSwitchHijos() {
            const hijosSwitch = document.getElementById('hijosSwitch');
            const noHijosInput = document.getElementById('noHijos');

            hijosSwitch.addEventListener('change', function() {
                noHijosInput.disabled = !this.checked;
                if (!this.checked) {
                    noHijosInput.value = '';
                }
            });
        }
