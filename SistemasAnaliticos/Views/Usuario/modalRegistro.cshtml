            const response = await fetch(
                `https://nominatim.openstreetmap.org/search?` +
                `country=Costa+Rica&` +
                `state=${encodeURIComponent(provincia)}&` +
                `featureType=city&` +
                `format=json&` +
                `addressdetails=1&` +
                `limit=50`
            );
            return await response.json();
        }

        async function buscarDistritos(provincia, canton) {
            const response = await fetch(
                `https://nominatim.openstreetmap.org/search?` +
                `country=Costa+Rica&` +
                `state=${encodeURIComponent(provincia)}&` +
                `city=${encodeURIComponent(canton)}&` +
                `featureType=town&` +
                `format=json&` +
                `addressdetails=1&` +
                `limit=50`
            );
            return await response.json();
        }
