    <script>
        // Función para normalizar texto (quitar tildes)
        function normalizarTexto(texto) {
            return texto.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase();
        }

        // Función para filtrar empleados en el cliente (búsqueda en tiempo real)
        function filterEmployees(searchTerm) {
            const cards = document.querySelectorAll('.card-employee');
            let visibleCount = 0;
            const searchNormalized = normalizarTexto(searchTerm);

            cards.forEach(card => {
                const employeeName = card.querySelector('.employee-name')?.textContent || '';
                const tags = card.querySelectorAll('.employee-tag');

                // Obtener puesto (primer tag) y departamento (segundo tag)
                const position = tags[0]?.textContent || '';
                const department = tags[1]?.textContent || '';

                // Normalizar todos los textos para comparar
                const nameNormalized = normalizarTexto(employeeName);
                const positionNormalized = normalizarTexto(position);
                const departmentNormalized = normalizarTexto(department);

                const matches = nameNormalized.includes(searchNormalized) ||
                               positionNormalized.includes(searchNormalized) ||
                               departmentNormalized.includes(searchNormalized);

                // Usar clases de Bootstrap en lugar de style.display
                if (matches) {
                    card.classList.remove('d-none');
                    visibleCount++;
                } else {
                    card.classList.add('d-none');
                }
            });

            // Actualizar contador
            const employeeCount = document.getElementById('employeeCount');
            if (employeeCount) {
                employeeCount.textContent = visibleCount;
            }

            // Mostrar/ocultar mensaje de no resultados (si existe)
            const noResults = document.getElementById('noResults');
            if (noResults) {
                if (visibleCount === 0) {
                    noResults.classList.remove('d-none');
                } else {
                    noResults.classList.add('d-none');
                }
            }
        }

        // Inicializar la página
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar búsqueda en tiempo real
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    filterEmployees(e.target.value.trim());
                });
            }

            // Filtrar inicialmente para contar correctamente
            filterEmployees('');
        });
    </script>
