@model SistemasAnaliticos.ViewModels.PaginacionConstanciasViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .bg-gradient-custom {
