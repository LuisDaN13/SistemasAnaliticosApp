        // Mapear estado del backend al frontend
        function mapearEstado(estadoBackend) {
            if (estadoBackend === "Creada" || estadoBackend === "Aprobada") {
                return "Aprobado";
            } else if (estadoBackend === "Pendiente") {
                return "Pendiente";
            } else if (estadoBackend === "Rechazada") {
                return "Rechazado";
