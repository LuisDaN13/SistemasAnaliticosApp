        let paginaActual = @Model.PaginaActual;

        const constanciasContainer = document.getElementById("constanciasContainer");
        const pagination = document.getElementById("pagination");

        // Estado global - cargar TODAS las constancias una sola vez
        let todasLasConstancias = [];
        let constanciasFiltradas = [];

        // Estado de los filtros - ACTUALIZADO CON NUEVOS FILTROS
        let filtrosActivos = {
