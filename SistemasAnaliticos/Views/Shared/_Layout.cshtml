    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Scripts de tu proyecto -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Solución específica para Blazor - Dropdowns con toggle mejorado
        function initializeBlazorNavbar() {
            const customToggler = document.getElementById('customNavbarToggler');
            const navbarCollapse = document.getElementById('navbarRH');

            // Botón hamburguesa
            if (customToggler && !customToggler._navInitialized) {
                customToggler._navInitialized = true;

                customToggler.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopImmediatePropagation();

                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse) ||
                                     new bootstrap.Collapse(navbarCollapse);

                    if (isExpanded) {
                        bsCollapse.hide();
                    } else {
                        bsCollapse.show();
                    }
                });
            }

            // Variable para trackear el dropdown abierto actual
            let currentOpenDropdown = null;

            // Dropdowns - comportamiento mejorado
            document.addEventListener('click', function(e) {
                const target = e.target;
                const dropdownToggle = target.closest('.dropdown-toggle');

                // Si es un dropdown toggle
                if (dropdownToggle && dropdownToggle.closest('.navbar-rh')) {
                    if (window.innerWidth < 992) {
                        e.preventDefault();
                        e.stopPropagation();

                        const menu = dropdownToggle.nextElementSibling;
                        const isSameDropdown = currentOpenDropdown === menu;

                        // Cerrar otros dropdowns
                        document.querySelectorAll('.navbar-rh .dropdown-menu.show').forEach(otherMenu => {
                            if (otherMenu !== menu) {
                                otherMenu.classList.remove('show');
                            }
                        });

                        // Si es el MISMO dropdown que ya estaba abierto, cerrarlo
                        if (isSameDropdown) {
                            menu.classList.remove('show');
                            currentOpenDropdown = null;
                        } else {
                            // Si es un dropdown diferente, abrirlo
                            menu.classList.add('show');
                            currentOpenDropdown = menu;
                        }
                    }
                }
                // Si es un link normal, cerrar navbar en móvil
                else if ((target.classList.contains('dropdown-item') ||
                         (target.classList.contains('nav-link') && !target.classList.contains('dropdown-toggle'))) &&
                        target.closest('.navbar-rh')) {
                    if (window.innerWidth < 992 && navbarCollapse.classList.contains('show')) {
                        const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                        if (bsCollapse) bsCollapse.hide();
                        if (customToggler) customToggler.setAttribute('aria-expanded', 'false');

                        // Cerrar también los dropdowns
                        document.querySelectorAll('.navbar-rh .dropdown-menu.show').forEach(menu => {
                            menu.classList.remove('show');
                        });
                        currentOpenDropdown = null;
                    }
                }
                // Si se hace click fuera del navbar, cerrar dropdowns
                else if (!target.closest('.navbar-rh')) {
                    document.querySelectorAll('.navbar-rh .dropdown-menu.show').forEach(menu => {
                        menu.classList.remove('show');
                    });
                    currentOpenDropdown = null;
                }
            });
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', initializeBlazorNavbar);
        window.addEventListener('load', initializeBlazorNavbar);
        setInterval(initializeBlazorNavbar, 500);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

