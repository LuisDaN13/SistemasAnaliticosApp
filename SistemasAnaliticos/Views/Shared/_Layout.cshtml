<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RRHH - Sistemas AnalÍticos</title>
    <!-- Bootstrap desde NuGet (via wwwroot) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (puedes instalar también via NuGet o usar CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemasAnaliticos.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Montserrat', sans-serif !important;
        }

        /* ==== NAVBAR RH PERSONALIZADO ==== */
        .navbar-rh {
            background-color: #012473;
        }

            .navbar-rh .navbar-toggler {
                border: none;
                color: white;
            }

                .navbar-rh .navbar-toggler:focus {
                    box-shadow: none;
                }

            .navbar-rh .notification-dot {
                position: absolute;
                top: 8px;
                right: 8px;
                width: 8px;
                height: 8px;
                background-color: #E00319;
                border-radius: 50%;
            }

        @@media (min-width: 992px) {
            .navbar-rh .nav-item.dropdown:hover .dropdown-menu {
                display: block;
                margin-top: 0;
            }
        }

        .navbar-rh .dropdown-menu {
            background-color: #012473;
            border: 1px solid #013599;
            border-radius: 0.375rem;
            z-index: 1050 !important;
        }

        .navbar-rh .dropdown-item {
            color: white !important;
            padding: 0.5rem 1rem;
        }

            .navbar-rh .dropdown-item:hover {
                background-color: #013599;
                color: white;
            }

        .navbar-rh .dropdown-divider {
            border-color: #013599;
        }

        .navbar-rh .nav-link {
            position: relative;
            padding: 0.5rem 1rem !important;
            border-radius: 0.375rem;
            transition: all 0.3s ease;
        }

            .navbar-rh .nav-link:hover {
                background-color: #013599;
            }

        /* Logo */
        .navbar-rh .logo-rh {
            height: 40px;
            width: auto;
            object-fit: contain;
        }

        .navbar-rh .logo-container-rh {
            transition: transform 0.3s ease;
        }

            .navbar-rh .logo-container-rh:hover {
                transform: scale(1.05);
            }

        .navbar-rh .border-primary {
            border-color: rgba(255,255,255,0.3) !important;
        }

        /* Responsive ajustes */
        @@media (max-width: 991.98px) {
            .navbar-rh .navbar-collapse {
                background-color: #012473;
                border-top: 1px solid #013599;
                padding: 1rem;
                border-radius: 0 0 0.5rem 0.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-rh text-white shadow-lg">
            <div class="container-xxl px-4 px-sm-6 px-lg-8">
                <!-- Logo y marca -->
                <a class="d-flex align-items-center gap-2 logo-container-rh text-white text-decoration-none"
                        asp-controller="Home" asp-action="Index">
                    <img src='/Img/circulo - logo blanco.png' alt="logo-circulo" class="logo-rh">
                    <span class="fs-4 fw-bold">Recursos Humanos</span>
                </a>

                <!-- Botón responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarRHCollapse"
                        aria-controls="navbarRHCollapse"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="bi bi-list text-white"></i>
                </button>

                <!-- Opciones de navegación -->
                <div class="collapse navbar-collapse" id="navbarRHCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                        <!-- Empleados -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Empleados
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index"
                                ><i class="bi bi-people me-2"></i>Directorio</a></li>
                            </ul>
                        </li>

                        <!-- Acciones -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Acciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Permiso" asp-action="Index"><i class="bi-plus-square me-2"></i>Nuevo Permiso</a></li>
                                <li><a class="dropdown-item" asp-controller="Liquidacion" asp-action="Index"><i class="bi-plus-square me-2"></i>Nueva Liquidación</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Permiso" asp-action="VerPermisos">Ver Permisos</a></li>
                                <li><a class="dropdown-item" asp-controller="Constancia" asp-action="VerConstancias">Ver Constancias</a></li>
                                <li><a class="dropdown-item" asp-controller="Beneficio" asp-action="VerBeneficios">Ver Beneficios</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Liquidacion" asp-action="VerViaticos">Ver Viáticos</a></li>
                                <li><hr class="dropdown-divider"></li>
                            </ul>
                        </li>

                        @if ((User.IsInRole("Administrador")) || User.IsInRole("RRHH"))
                        {
                            <!-- Otros -->
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Otros
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Foto" asp-action="Index">Fotos Empresariales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Noticia" asp-action="Index">Noticias Empresariales</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <!-- Admin Roles -->
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Roles
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Rol" asp-action="Index">Roles Aplicación</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Controles de usuario -->
                    <form asp-action="LogOut" asp-controller="Usuario" method="post">
                    <div class="d-flex align-items-center gap-3 mt-3 mt-lg-0">
                        <div class="d-flex align-items-center gap-2 ps-3 border-start border-primary">
                            @if (User.Identity.IsAuthenticated)
                                {
                                    <span class="small">@User.Identity.Name</span>
                                }
                                else
                                {
                                    <span class="small">Usuario No Logueado</span>
                                }
                        </div>
                        <button class="btn p-2 text-white border-0">
                            <i class="bi bi-box-arrow-right fs-5"></i>
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Incluir Lottie -->
    <script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

    <!-- jQuery desde NuGet -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle desde NuGet -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Scripts de tu proyecto -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>