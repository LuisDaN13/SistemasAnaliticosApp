<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RRHH - Sistemas AnalÍticos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemasAnaliticos.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Montserrat', sans-serif !important;
        }

        /* ==== NAVBAR RH PERSONALIZADO ==== */
        .navbar-rh {
            background-color: #012473;
        }

            .navbar-rh .navbar-toggler {
                border: none;
                color: white;
            }

                .navbar-rh .navbar-toggler:focus {
                    box-shadow: none;
                }

            .navbar-rh .notification-dot {
                position: absolute;
                top: 8px;
                right: 8px;
                width: 8px;
                height: 8px;
                background-color: #E00319;
                border-radius: 50%;
            }

            @@media (min-width: 992px) {
                .navbar-rh .nav-item.dropdown:hover .dropdown-menu {
                    display: block;
                    margin-top: 0;
                }
            }

            .navbar-rh .dropdown-menu {
                background-color: #012473;
                border: 1px solid #013599;
                border-radius: 0.375rem;
            }

            .navbar-rh .dropdown-item {
                color: white !important;
                padding: 0.5rem 1rem;
            }

                .navbar-rh .dropdown-item:hover {
                    background-color: #013599;
                    color: white;
                }

            .navbar-rh .dropdown-divider {
                border-color: #013599;
            }

            .navbar-rh .nav-link {
                position: relative;
                padding: 0.5rem 1rem !important;
                border-radius: 0.375rem;
                transition: all 0.3s ease;
            }

                .navbar-rh .nav-link:hover {
                    background-color: #013599;
                }

            /* Logo */
            .navbar-rh .logo-rh {
                height: 40px;
                width: auto;
                object-fit: contain;
            }

            .navbar-rh .logo-container-rh {
                transition: transform 0.3s ease;
            }

                .navbar-rh .logo-container-rh:hover {
                    transform: scale(1.05);
                }

            .navbar-rh .border-primary {
                border-color: rgba(255,255,255,0.3) !important;
            }

        /* Responsive ajustes */
        @@media (max-width: 991.98px) {
            .navbar-rh .navbar-collapse
            {
                background-color: #012473;
                border-top: 1px solid #013599;
                padding: 1rem;
                border-radius: 0 0 0.5rem 0.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-rh text-white shadow-lg">
            <div class="container-xxl px-4 px-sm-6 px-lg-8">

                <a class="d-flex align-items-center gap-2 logo-container-rh text-white text-decoration-none"
                        asp-controller="Home" asp-action="Index">
                    <img src='/Img/circulo - logo blanco.png' alt="logo-circulo" class="logo-rh">
                    <span class="fs-4 fw-bold">Recursos Humanos</span>
                </a>

                <!-- Botón responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarRH"
                        aria-controls="navbarRH" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>

                <!-- Opciones de navegación -->
                <div class="collapse navbar-collapse" id="navbarRH">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                        <!-- Empleados -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Empleados
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index"><i class="bi bi-people me-2"></i>Lista de Empleados</a></li>
                            </ul>
                        </li>

                        <!-- Acciones -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Acciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Incapacidades</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Licencias</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Vacaciones</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Amonestaciones</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Rebajos</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Liquidación</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-1"></i>Aguinaldo</a></li>
                            </ul>
                        </li>

                        <!-- Planilla -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Planilla
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-calculator me-2"></i>Calcular Nómina</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-receipt me-2"></i>Recibos de Pago</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-currency-dollar me-2"></i>Deducciones</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-text me-2"></i>Reportes Fiscales</a></li>
                            </ul>
                        </li>

                        <!-- Reportes -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Reportes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-bar-chart me-2"></i>Reportes Empresariales</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Controles de usuario -->
                    <div class="d-flex align-items-center gap-3 mt-3 mt-lg-0">
                        <div class="d-flex align-items-center gap-2 ps-3 border-start border-primary">
                            <span class="small">Admin</span>
                        </div>
                        <button class="btn p-2 text-white border-0">
                            <i class="bi bi-box-arrow-right fs-5"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS (solo una vez) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts de tu proyecto -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.navbar-rh .nav-link, .navbar-rh .dropdown-item');
            const navbarCollapse = document.getElementById('navbarRH');
            const bsCollapse = new bootstrap.Collapse(navbarCollapse, { toggle: false });

            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (navbarCollapse.classList.contains('show')) {
                        bsCollapse.hide();
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>