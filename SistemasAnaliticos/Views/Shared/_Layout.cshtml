                            </ul>
                        </li>

                        <!-- Reportes -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Reportes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-bar-chart me-2"></i>Reportes Empresariales</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Controles de usuario -->
                    <form asp-action="LogOut" asp-controller="Usuario" method="post">
                    <div class="d-flex align-items-center gap-3 mt-3 mt-lg-0">
                            <div class="d-flex align-items-center gap-2 ps-3 border-start border-primary">
                                <span class="small">Admin</span>
