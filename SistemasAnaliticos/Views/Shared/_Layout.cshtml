                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index"><i class="bi bi-people me-2"></i>Directorio</a></li>
                            </ul>
                        </li>

                        <!-- Acciones -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Acciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Permiso" asp-action="Index"><i class="bi-plus-square me-2"></i>Nuevo Permiso</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Permiso" asp-action="VerPermisos">Ver Permisos</a></li>
                                <li><a class="dropdown-item" asp-controller="Constancia" asp-action="VerConstancias">Ver Constancias</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Incapacidades</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Licencias</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Vacaciones</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Amonestaciones</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Rebajos</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Liquidación</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-people me-1"></i>Aguinaldo</a></li>
                            </ul>
