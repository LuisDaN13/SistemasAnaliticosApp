<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RRHH - Sistemas AnalÍticos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemasAnaliticos.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Montserrat', sans-serif !important;
        }

        .navbar-custom {
            background-color: #012473;
        }

        .notification-dot {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 8px;
            height: 8px;
            background-color: #E00319;
            border-radius: 50%;
        }

        /* Estilos para los dropdowns al hover */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            background-color: #012473;
            border: 1px solid #013599;
            border-radius: 0.375rem;
        }

        .dropdown-item {
            color: white !important;
            padding: 0.5rem 1rem;
        }

            .dropdown-item:hover {
                background-color: #013599;
                color: white;
            }

        .dropdown-divider {
            border-color: #013599;
        }

        .btn:hover {
            background-color: #013599 !important;
            border-radius: 0.375rem;
        }

        .border-primary {
            border-color: rgba(255,255,255,0.3) !important;
        }

        /* Mejoras visuales para los enlaces de navegación */
        .nav-link {
            position: relative;
            padding: 0.5rem 1rem !important;
            border-radius: 0.375rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background-color: #013599;
            }

        /* Estilos para la imagen del logo */
        .logo-img {
            height: 40px;
            width: auto;
            object-fit: contain;
        }

        .logo-container {
            transition: transform 0.3s ease;
        }

            .logo-container:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom text-white shadow-lg">
            <div class="container-xxl px-4 px-sm-6 px-lg-8">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <!-- Logo y navegación principal -->
                    <div class="d-flex align-items-center gap-4 gap-lg-5">

                        <div class="d-flex align-items-center gap-2 logo-container" href="index.html">
                            <img src='/Img/circulo - logo blanco.png' alt="logo-circulo" class="logo-img">
                            <span class="fs-4 fw-bold">Recursos Humanos</span>
                        </div>

                        <!-- Navegación para pantallas grandes con dropdowns -->
                        <div class="d-none d-md-flex gap-2 gap-lg-3">

                            <!-- Empleados -->
                            <div class="nav-item dropdown">
                                <a class="nav-link text-white text-decoration-none dropdown-toggle" href="#" role="button">
                                    Empleados
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Lista de Empleados</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-1"></i>Nuevo Empleado</a></li>
                                </ul>
                            </div>

                            <!-- Acciones como Pedir Vacaciones, Pedir Incapacidades, Pedir Licencias, Ver Amonestaciones, Ver Rebajos, Ver Aguinaldo, Ver Liquidacion -->
                            <div class="nav-item dropdown">
                                <a class="nav-link text-white text-decoration-none dropdown-toggle" href="#" role="button">
                                    Acciones
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Incapacidades</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Licencias</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Vacaciones</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Amonestaciones</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>Rebajos</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus me-2"></i>Liquidación</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-people me-1"></i>Aguinaldo</a></li>
                                </ul>
                            </div>

                            <!-- Nómina -->
                            <div class="nav-item dropdown">
                                <a class="nav-link text-white text-decoration-none dropdown-toggle" href="#" role="button">
                                    Planilla
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-calculator me-2"></i>Calcular Nómina</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-receipt me-2"></i>Recibos de Pago</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-currency-dollar me-2"></i>Deducciones</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-text me-2"></i>Reportes Fiscales</a></li>
                                </ul>
                            </div>

                            <!-- Reportes -->
                            <div class="nav-item dropdown">
                                <a class="nav-link text-white text-decoration-none dropdown-toggle" href="#" role="button">
                                    Reportes
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-bar-chart me-2"></i>Reportes Empresariales</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Controles de usuario -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- Perfil de usuario -->
                        <div class="d-flex align-items-center gap-2 ps-3 border-start border-primary">
                            <span class="d-none d-md-inline small">Admin</span>
                        </div>

                        <!-- Botón de salida -->
                        <button class="btn p-2 text-white border-0">
                            <i class="bi bi-box-arrow-right fs-5"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>