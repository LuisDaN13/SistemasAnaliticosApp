        <!-- Carrusel de Imágenes -->
        <div class="carousel-container">
            <div class="carousel-inner" style="height: 500px; position: relative;">
                @if (tieneFotos)
                {
                    <!-- Imágenes del carrusel desde la base de datos -->
                    @for (int i = 0; i < listaFotos.Count(); i++)
                    {
                        var foto = listaFotos.ElementAt(i);
                        @if (foto.foto != null && foto.foto.Length > 0)
                        {
                            var base64foto = Convert.ToBase64String(foto.foto);
                            <div class="carousel-slide @(i == 0 ? "active" : "")">
                                <img src="data:image/jpeg;base64,@base64foto"
                                     alt="Foto SASA @(i + 1)"
                                     class="carousel-image">
                            </div>
                        }
                    }

                    <!-- Flechas de navegación -->
                    <button class="carousel-nav prev" aria-label="Imagen anterior">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="carousel-nav next" aria-label="Siguiente imagen">
                        <i class="bi bi-chevron-right"></i>
                    </button>

                    <!-- Indicadores de puntos -->
                    <div class="carousel-indicators">
                        @for (int i = 0; i < listaFotos.Count(f => f.foto != null && f.foto.Length > 0); i++)
                        {
                            <button class="carousel-indicator @(i == 0 ? "active" : "")"
                                    aria-label="Ir a imagen @(i + 1)"></button>
                        }
                    </div>
                }
                else
                {
                    <!-- Placeholder cuando no hay fotos -->
                    <div class="carousel-slide active">
                        <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #012473 0%, #013599 100%); display: flex; align-items: center; justify-content: center; color: white;">
                            <div class="text-center">
                                <i class="bi bi-image fs-1 mb-3"></i>
                                <h4 class="fw-bold mb-2">No hay fotos disponibles</h4>
                                <p class="mb-0">Vuelve más tarde para ver las novedades</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- News Header -->
        <div class="d-flex align-items-stretch mb-2 mt-4 overflow-hidden rounded-top shadow">
            <div class="news-header d-flex align-items-center">
                <h2 class="mb-0 fw-bold">NOTICIAS</h2>
            </div>
            <div class="news-nav flex-grow-1">
                @if ((User.IsInRole("Administrador")) || User.IsInRole("RRHH"))
                {
                    <a asp-controller="Noticia" asp-action="Index" class="btn text-white">
                        Ver todas las noticias
                        <i class="bi bi-chevron-right ms-2"></i>
                    </a>
                }
            </div>
        </div>

        <!-- News Grid -->
        <div class="row g-4">
            @if (tieneNoticias)
            {
                foreach (var item in listaNoticias)
                {
                    <div class="col-12 col-md-6 col-lg">
                        <a asp-controller="Noticia" asp-action="Details" asp-route-id="@item.idNoticia" class="card news-card h-100" style="text-decoration: none">

                            <!-- Main Image -->
                            <div class="card-img-container">
                                @if (item.foto != null && item.foto.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.foto)" />
                                }
                                else
                                {
                                    <img src="~/img/sinFondo.jpg" />
                                }
                            </div>

                            <div class="card-body p-3 p-md-4">
                                <!-- Category and Date -->
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <span class="badge badge-custom text-white" style="background-color: @(
                                        item.categoria == "IMPORTANTE" ? "#dc3545" :
                                        item.categoria == "CELEBRACIÓN" ? "#198754" :
                                        item.categoria == "LOGRO" ? "#198754" : "#6c757d")">
                                        @item.categoria
                                    </span>

                                    <span class="text-muted small">
                                        @(
                                            item.fechaPublicacion
                                            .ToDateTime(TimeOnly.FromTimeSpan(item.horaPublicacion))
                                            .ToString("dd MMM yyyy HH:mm", new System.Globalization.CultureInfo("es-ES"))
                                        )
                                    </span>
                                </div>

                                <!-- Title -->
                                <h1 class="h2 fw-bold text-dark mb-4">@item.titulo</h1>

                                <!-- Author Info -->
                                <div class="d-flex align-items-center">
                                    <span class="badge badge-custom text-white" style="background-color: @(
                                        item.categoria == "IMPORTANTE" ? "#dc3545" :
                                        item.categoria == "CELEBRACIÓN" ? "#198754" :
                                        item.categoria == "LOGRO" ? "#198754" : "#6c757d")">
                                        Por @item.autor
