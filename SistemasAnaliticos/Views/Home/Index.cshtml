@model SistemasAnaliticos.ViewModels.HomeIndexViewModel

@{
    var listaFotos = Model?.FotosCarousel ?? Enumerable.Empty<FotoViewModel>();
    var tieneFotos = listaFotos.Any(f => f.foto != null && f.foto.Length > 0);

    var listaNoticias = Model?.Noticias ?? Enumerable.Empty<NoticiaViewModel>();
    var tieneNoticias = listaNoticias.Any(t => !string.IsNullOrWhiteSpace(t.titulo));
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        :root {
            --primary-color: #012473;
            --secondary-color: #013599;
            --danger-color: #E00319;
            --success-color: #198754;
        }

    </style>
    <style>
        .news-header {
            background-color: #00BCD4;
            color: white;
            padding: 1rem 2rem;
        }

        .news-nav {
            background-color: #012473;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

            .news-nav .btn {
                color: white;
                border: none;
            }

                .news-nav .btn:hover {
                    background-color: #013599;
                    color: white;
                }

        .news-card {
            transition: box-shadow 0.3s;
            cursor: pointer;
            height: 100%;
        }

            .news-card:hover {
                box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
            }

        .card-img-container {
            overflow: hidden;
        }

        .news-card img {
            transition: transform 0.3s;
            height: 200px;
            object-fit: cover;
        }

        .news-card:hover img {
            transform: scale(1.05);
        }

        .video-indicator {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(0, 0, 0, 0.2);
        }

        .video-icon {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            padding: 12px;
            transition: background-color 0.3s;
        }

        .news-card:hover .video-icon {
            background-color: white;
        }

        .category-badge {
            background-color: #00BCD4;
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .author-info {
            border-top: 1px solid #e9ecef;
            padding-top: 0.75rem;
            margin-top: 0.75rem;
        }
    </style>
    <style>
        .carousel-container {
            position: relative;
            margin-bottom: 2rem;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            transition: opacity 0.7s ease-in-out;
            opacity: 0;
        }

            .carousel-slide.active {
                opacity: 1;
            }

        .carousel-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .carousel-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(255, 255, 255, 0.8);
            border: none;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: all 0.3s;
        }

        .carousel-container:hover .carousel-nav {
            opacity: 1;
        }

        .carousel-nav:hover {
            background-color: white;
        }

        .carousel-nav.prev {
            left: 1rem;
        }

        .carousel-nav.next {
            right: 1rem;
        }

        .carousel-indicators {
            position: absolute;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 0.5rem;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .carousel-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            border: none;
            background-color: rgba(255, 255, 255, 0.5);
            transition: all 0.3s;
        }

            .carousel-indicator:hover {
                background-color: rgba(255, 255, 255, 0.75);
            }

            .carousel-indicator.active {
                width: 32px;
                border-radius: 4px;
                background-color: white;
            }
    </style>
    <style>
        /* ======== CARD BASE ======== */
        .news-card {
            border: none;
            border-radius: 0 0 18px 18px;
            overflow: hidden;
            transition: transform .25s ease, box-shadow .25s ease;
            background-color: #fff;
        }

            .news-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
            }

        /* ======== IMAGE CONTAINER ======== */
        .card-img-container {
            width: 100%;
            height: 220px;
            overflow: hidden;
            border-bottom: 1px solid #e5e5e5;
        }

            .card-img-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform .4s ease;
            }

        .news-card:hover .card-img-container img {
            transform: scale(1.06);
        }

        /* ======== CATEGORY BADGE ======== */
        .badge-custom {
            background-color: #198754; /* verde */
            border-radius: 8px;
            padding: 6px 12px;
            font-size: .75rem;
            font-weight: 600;
        }

        /* ======== TITLE ======== */
        .news-card h1 {
            font-size: 1.3rem !important;
            line-height: 1.3;
            max-height: 3.6rem;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        /* ======== AUTHOR ======== */
        .news-card .rounded-circle {
            flex-shrink: 0;
        }

            .news-card .rounded-circle span {
                font-size: .75rem;
                font-weight: 500;
            }

        /* ======== DATE ======== */
        .text-muted.small {
            font-size: .8rem;
        }

        /* ======== GRID ADJUSTMENTS ======== */
        @@media (min-width: 992px) {
            .col-lg-3 {
                flex: 0 0 25%;
                max-width: 25%;
            }
        }
    </style>
</head>
<body class="bg-gradient-custom min-vh-100">

    <!-- Main Content -->
    <main class="container-xxl px-4 px-sm-6 px-lg-8 py-4 mt-4">

        <!-- Carrusel de Imágenes -->
        <div class="carousel-container">
            <div class="carousel-inner" style="height: 500px; position: relative;">
                @if (tieneFotos)
                {
                    <!-- Imágenes del carrusel desde la base de datos -->
                    @for (int i = 0; i < listaFotos.Count(); i++)
                    {
                        var foto = listaFotos.ElementAt(i);
                        @if (foto.foto != null && foto.foto.Length > 0)
                        {
                            var base64foto = Convert.ToBase64String(foto.foto);
                            <div class="carousel-slide @(i == 0 ? "active" : "")">
                                <img src="data:image/jpeg;base64,@base64foto"
                                     alt="Foto SASA @(i + 1)"
                                     class="carousel-image">
                            </div>
                        }
                    }

                    <!-- Flechas de navegación -->
                    <button class="carousel-nav prev" aria-label="Imagen anterior">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="carousel-nav next" aria-label="Siguiente imagen">
                        <i class="bi bi-chevron-right"></i>
                    </button>

                    <!-- Indicadores de puntos -->
                    <div class="carousel-indicators">
                        @for (int i = 0; i < listaFotos.Count(f => f.foto != null && f.foto.Length > 0); i++)
                        {
                            <button class="carousel-indicator @(i == 0 ? "active" : "")"
                                    aria-label="Ir a imagen @(i + 1)"></button>
                        }
                    </div>
                }
                else
                {
                    <!-- Placeholder cuando no hay fotos -->
                    <div class="carousel-slide active">
                        <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #012473 0%, #013599 100%); display: flex; align-items: center; justify-content: center; color: white;">
                            <div class="text-center">
                                <i class="bi bi-image fs-1 mb-3"></i>
                                <p>No hay fotos disponibles de SASA para mostrar</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- News Header -->
        <div class="d-flex align-items-stretch mb-2 mt-4 overflow-hidden rounded-top shadow">
            <div class="news-header d-flex align-items-center">
                <h2 class="mb-0 fw-bold">NOTICIAS</h2>
            </div>
            <div class="news-nav flex-grow-1">
                <a asp-controller="Noticia"
                   asp-action="Index"
                   class="btn text-white">
                    Ver todas las noticias
                    <i class="bi bi-chevron-right ms-2"></i>
                </a>

            </div>
        </div>

        <!-- News Grid -->
        <div class="row g-4">
            @if (tieneNoticias)
            {
                foreach (var item in listaNoticias)
                {
                    <div class="col-12 col-md-6 col-lg">
                        <a asp-controller="Noticia" asp-action="Details" asp-route-id="@item.idNoticia" class="card news-card h-100" style="text-decoration: none">

                            <!-- Main Image -->
                            <div class="card-img-container">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.foto)"
                                     alt="Foto Noticia"
                                     style="cursor: pointer;" />
                            </div>

                            <div class="card-body p-3 p-md-4">
                                <!-- Category and Date -->
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <span class="badge badge-custom text-white" style="background-color: @(
                                        item.categoria == "IMPORTANTE" ? "#dc3545" :
                                        item.categoria == "CELEBRACIÓN" ? "#198754" :
                                        item.categoria == "LOGRO" ? "#198754" : "#6c757d")">
                                        @item.categoria
                                    </span>

                                    <span class="text-muted small">
                                        @(
                                            item.fechaPublicacion
                                            .ToDateTime(TimeOnly.FromTimeSpan(item.horaPublicacion))
                                            .ToString("dd MMM yyyy HH:mm", new System.Globalization.CultureInfo("es-ES"))
                                        )
                                    </span>
                                </div>

                                <!-- Title -->
                                <h1 class="h2 fw-bold text-dark mb-4">@item.titulo</h1>

                                <!-- Author Info -->
                                <div class="d-flex align-items-center">
                                    <span class="badge badge-custom text-white" style="background-color: @(
                                        item.categoria == "IMPORTANTE" ? "#dc3545" :
                                        item.categoria == "CELEBRACIÓN" ? "#198754" :
                                        item.categoria == "LOGRO" ? "#198754" : "#6c757d")">
                                        Por @item.autor
                                    </span>

                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">No hay noticias disponibles.</p>
            }
        </div>
    </main>

    <!-- Respuestas de los Formularios -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Para mensajes de error
            @if (TempData["ErrorMessageHome"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '@Html.Raw(TempData["ErrorMessageHome"])',
                        confirmButtonText: 'Aceptar'
                    });
                </text>
            }

            // Para mensajes de éxito
            @if (TempData["SuccessMessageHome"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito',
                        text: '@Html.Raw(TempData["SuccessMessageHome"])',
                        confirmButtonText: 'Aceptar',
                        timer: 3000
                    });
                </text>
            }
        });
    </script>
    <script>
                document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.carousel-slide');

            // Solo inicializar el carousel si hay slides
            if (slides.length > 0) {
                const indicators = document.querySelectorAll('.carousel-indicator');
                const prevButton = document.querySelector('.carousel-nav.prev');
                const nextButton = document.querySelector('.carousel-nav.next');
                let currentSlide = 0;
                let slideInterval;

                // Función para mostrar una diapositiva específica
                function showSlide(index) {
                    // Ocultar todas las diapositivas
                    slides.forEach(slide => slide.classList.remove('active'));
                    indicators.forEach(indicator => indicator.classList.remove('active'));

                    // Mostrar la diapositiva actual
                    slides[index].classList.add('active');
                    indicators[index].classList.add('active');

                    currentSlide = index;
                }

                // Función para ir a la siguiente diapositiva
                function nextSlide() {
                    let nextIndex = (currentSlide + 1) % slides.length;
                    showSlide(nextIndex);
                }

                // Función para ir a la diapositiva anterior
                function prevSlide() {
                    let prevIndex = (currentSlide - 1 + slides.length) % slides.length;
                    showSlide(prevIndex);
                }

                // Iniciar el carrusel automático
                function startCarousel() {
                    slideInterval = setInterval(nextSlide, 25000); // Cambia cada 5 segundos
                }

                // Detener el carrusel automático
                function stopCarousel() {
                    clearInterval(slideInterval);
                }

                // Event listeners para los botones de navegación
                if (prevButton) {
                    prevButton.addEventListener('click', function() {
                        stopCarousel();
                        prevSlide();
                        startCarousel();
                    });
                }

                if (nextButton) {
                    nextButton.addEventListener('click', function() {
                        stopCarousel();
                        nextSlide();
                        startCarousel();
                    });
                }

                // Event listeners para los indicadores
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', function() {
                        stopCarousel();
                        showSlide(index);
                        startCarousel();
                    });
                });

                // Pausar el carrusel cuando el ratón está sobre él
                const carouselContainer = document.querySelector('.carousel-container');
                if (carouselContainer) {
                    carouselContainer.addEventListener('mouseenter', stopCarousel);
                    carouselContainer.addEventListener('mouseleave', startCarousel);
                }

                // Iniciar el carrusel automático
                startCarousel();
            }
        });
    </script>
</body>
</html>