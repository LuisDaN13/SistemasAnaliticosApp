@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href='/img/circulo - logo blanco.png' />
    <title>Sistemas Analíticos</title>

    <!-- Bootstrap desde NuGet (via wwwroot) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (puedes instalar también via NuGet o usar CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif !important;
        }

        .vh-100 {
            height: 100vh;
        }

        .overflow-hidden {
            overflow: hidden;
        }

        .text-foreground {
            color: #212529;
        }

        .text-muted-foreground {
            color: #6c757d;
        }

        .bg-secondary {
            background-color: #0d6efd !important;
        }

        /* Estilo minimalista para las cards */
        .system-card-minimal {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.5rem;
            text-decoration: none;
            color: inherit;
            border-bottom: 1px solid rgba(233, 236, 239, 0.3);
            background-color: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            transition: all 0.2s ease;
        }

            .system-card-minimal:first-child {
                border-top: 1px solid rgba(233, 236, 239, 0.3);
            }

            .system-card-minimal:hover {
                background-color: rgba(255, 255, 255, 0.9);
            }

                .system-card-minimal:hover .icon-minimal i {
                    color: #012473;
                }

                .system-card-minimal:hover .arrow-minimal i {
                    color: #012473;
                    transform: translateX(4px);
                }

        .icon-minimal {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .icon-minimal i {
                font-size: 2rem;
                color: #495057;
                transition: all 0.2s ease;
            }

        .content-minimal {
            flex: 1;
        }

            .content-minimal h3 {
                font-weight: 600;
                font-size: 1.25rem;
                margin-bottom: 0.25rem;
                color: #212529;
            }

            .content-minimal p {
                color: #495057;
                margin-bottom: 0;
                font-size: 0.95rem;
                line-height: 1.5;
            }

        .arrow-minimal {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .arrow-minimal i {
                font-size: 1.25rem;
                color: #adb5bd;
                transition: all 0.2s ease;
            }

        /* Hero section con la foto de fondo */
        .hero-section {
            position: relative;
            height: 100%;
            background-image: url("/img/fondoEmpresa.png");
            background-size: cover;
            background-position: center;
        }

        /* Overlay muy sutil para mejorar legibilidad */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(1, 36, 115, 0.3);
            backdrop-filter: brightness(0.8);
        }

        /* Logo flotante con fondo semitransparente */
        .floating-logo {
            position: absolute;
            top: 2rem;
            left: 2rem;
            z-index: 20;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            background-color: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            padding: 0.5rem 1rem;
            border-radius: 100px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .logo-container {
            width: 32px;
            height: 32px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo-container img {
            width: 32px;
            height: 32px;
            object-fit: contain;
        }

        /* Contenedor de cards minimalistas con fondo semitransparente */
        .cards-minimal-container {
            width: 100%;
            max-width: 600px;
            margin-left: auto;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        /* Ajustes de texto para mejor legibilidad sobre la imagen */
        .hero-section h1 {
            color: #212529;
            text-shadow: 0 2px 4px rgba(255, 255, 255, 0.5);
        }

        .hero-section p {
            color: #343a40;
            text-shadow: 0 1px 2px rgba(255, 255, 255, 0.5);
        }

        /* Responsive */
        @@media (min-width: 992px) {
            .cards-minimal-container

        {
            max-width: 550px;
        }

        }

        /* Text sizes responsivos */
        .fs-md-2hx {
            font-size: 3rem;
        }

        .fs-lg-3hx {
            font-size: 3.5rem;
        }

        @@media (min-width: 768px) {
            .fs-md-2hx

        {
            font-size: 3rem;
        }

        }

        @@media (min-width: 992px) {
            .fs-lg-3hx

        {
            font-size: 3.5rem;
        }

        }
    </style>
</head>
<body>
    <div class="vh-100 overflow-hidden">

        <!-- Logo flotante con blur -->
        <div class="floating-logo">
            <div class="logo-container">
                <img src="~/img/circulo - logo azul.png" alt="SASA Logo">
            </div>
        </div>

        <!-- Hero Section con foto de fondo -->
        <main class="h-100">
            <section class="position-relative h-100 hero-section">
                <!-- Overlay muy sutil -->
                <div class="position-absolute top-0 start-0 w-100 h-100 hero-overlay"></div>

                <!-- Content (por encima del overlay) -->
                <div class="position-relative z-10 h-100 d-flex flex-column justify-content-evenly gap-4 px-4 py-4 px-lg-5 flex-lg-row align-items-lg-center gap-lg-5">

                    <!-- Left: Title & description -->
                    <div class="d-flex flex-column justify-content-center" style="flex: 0 1 auto; max-width: 500px;">
                        <h1 class="fw-bold lh-sm fs-1 fs-md-2hx fs-lg-3hx mb-0" style="color: white">
                            Bienvenido al Portal
                            <span style="color: #012473">SASA</span>
                        </h1>

                        <p class="mt-4" style="max-width: 450px; color: white">
                            Accede a todos los sistemas de la organización desde un solo lugar.
                            Selecciona el módulo que necesitas para comenzar.
                        </p>
                    </div>

                    <!-- Right: System cards minimalistas con blur -->
                    <div class="flex-lg-1 d-flex justify-content-end">
                        <div class="cards-minimal-container">
                            <!-- Sistema 1: Recursos Humanos -->
                            <a asp-controller="Home" asp-action="Index" class="system-card-minimal">
                                <div class="icon-minimal">
                                    <i class="bi bi-people-fill"></i>
                                </div>

                                <div class="content-minimal">
                                    <h3>Recursos Humanos</h3>
                                    <p>Gestión de personal, permisos, constancias, solicitud de beneficios, liquidaciones de tarjetas, viaticos, extras, entre otros.</p>
                                </div>

                                <div class="arrow-minimal">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                            </a>

                            <!-- Sistema 2: Financiero -->
                            <a href="#" class="system-card-minimal">
@*                             <a asp-controller="Home" asp-action="HomeFinanciero" class="system-card-minimal">                                
 *@                                <div class="icon-minimal">
                                    <i class="bi bi-cash-stack"></i>
                                </div>

                                <div class="content-minimal">
                                    <h3>Financiero</h3>
                                    <p>Control de garantías.</p>
                                </div>

                                <div class="arrow-minimal">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>

<!-- Bootstrap Bundle desde NuGet -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- FontAwesome Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</html>