@model SistemasAnaliticos.Entidades.Permiso

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(4px);
        }

        .modal-header {
            background: linear-gradient(to right, #012473, #013599);
            color: white;
        }

        .btn-primary-custom {
            background-color: #012473;
            border-color: #012473;
        }

            .btn-primary-custom:hover {
                background-color: #013599;
                border-color: #013599;
            }

        .section-divider {
            border-top: 1px solid #dee2e6;
            padding-top: 1.25rem;
        }

        /* ESTILOS IDÉNTICOS AL FORMULARIO DE EMPLEADOS */
        .is-invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
        }

        .alert {
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #495057;
        }
    </style>
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="createVacacionesModal" tabindex="-1" aria-labelledby="createVacacionesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="permissionModalLabel">Nuevo Permiso de Vacaciones</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Form -->
                <form id="vacasForm" asp-controller="Permiso" asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="tipo" value="Vacaciones" />
                    
                    <div class="modal-body">
                        <!-- Contenedor para mensajes de validación -->
                        <div id="validationAlertsVacas"></div>

                        <div>
                            <!-- Fechas y Días -->
                            <div class="row mb-3">
                                <div class="col-md-4 mt-1 mb-2">
                                    <label class="form-label required-field">Fecha Inicio</label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaInicio"
                                           id="fechaInicioVacas"
                                           required>
                                </div>
                                <div class="col-md-4 mt-1 mb-2">
                                    <label class="form-label required-field">Fecha Fin</label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaFinalizacion"
                                           id="fechaFinalizacionVacas"
                                           required>
                                </div>

                                <div class="col-md-4 mt-1 mb-2">
                                    <label class="form-label required-field">Fecha de Regreso Laboral</label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaRegresoLaboral"
                                           id="fechaRegresoLaboralVacas"
                                           required>
                                </div>
                            </div>
                        </div>

                        <div class="section-divider">
                            <!-- Motivo -->
                            <div class="mb-3">
                                <label class="form-label">Comentarios</label>
                                <textarea class="form-control"
                                          rows="3"
                                          placeholder="Alguna nota..."
                                          id="comentariosVacas"
                                          asp-for="comentarios"></textarea>
                            </div>
                        </div>

                        <div class="section-divider">
                            <div>
                                <!-- Foto -->
                                <div>
                                    <label asp-for="fotoFile" class="form-label">Foto relacionada</label>
                                    <input asp-for="fotoFile"
                                           type="file"
                                           class="form-control"
                                           id="fotoFileVacas"
                                           accept=".jpg,.jpeg,.png" />
                                    <div class="form-text">Solamente imagenes tipo (JPG, JPEG o PNG)</div>
                                </div>

                                <!-- Datos Adjuntos -->
                                <div class="mt-4">
                                    <label class="form-label">Datos Adjuntos</label>
                                    <input asp-for="adjuntoFile"
                                           type="file"
                                           class="form-control"
                                           id="adjuntoFileVacas">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary-custom text-white" id="submitBtnVacas">
                            <i class="bi bi-save me-2"></i>Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const modal = document.getElementById('createVacacionesModal');

        modal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const diasDisponibles = parseInt(button.getAttribute('data-dias-vacaciones')) || 0;

            window.diasVacaciones = diasDisponibles;
        });
    </script>
    <script>
        // SISTEMA DE VALIDACIÓN ESPECÍFICO
        document.addEventListener('DOMContentLoaded', function() {
            inicializarValidacionVacas();
            inicializarResetVacas();
        });

        function inicializarResetVacas() {
            const modal = document.getElementById('createVacacionesModal');
            const form = document.getElementById('vacasForm');
            const cancelBtn = document.querySelector('.btn-outline-secondary');

            // Resetear cuando el modal se cierra
            modal.addEventListener('hidden.bs.modal', resetearFormularioVacas);

            // Resetear cuando se hace clic en Cancelar
            if (cancelBtn) {
                cancelBtn.addEventListener('click', resetearFormularioVacas);
            }
        }

        function resetearFormularioVacas() {
            const form = document.getElementById('vacasForm');

            // 1. Resetear valores del formulario
            form.reset();

            // 2. Limpiar todas las clases de validación
            const campos = form.querySelectorAll('.form-control, .form-select');
            campos.forEach(campo => {
                campo.classList.remove('is-invalid');
                campo.classList.remove('is-valid');
            });

            // 3. Limpiar mensajes de validación
            hideValidationErrorVacas();

            // 4. Opcional: Limpiar el texto del tipo de permiso
            const tipoTexto = document.getElementById('tipoTexto');
            if (tipoTexto) tipoTexto.textContent = '';

            console.log('Formulario de permisos reseteado');
        }

        function inicializarValidacionVacas() {
            const submitBtn = document.getElementById('submitBtnVacas');

            // MANEJAR ENVÍO
            submitBtn.addEventListener('click', function(e) {
                e.preventDefault();

                // Validar TODOS los campos antes de enviar
                let formularioValido = true;
                const invalidFields = [];

                // Obtener todos los campos requeridos dentro de este modal
                const requiredFields = document.querySelectorAll('#createVacacionesModal [required]');

                // Validar cada campo requerido
                requiredFields.forEach(field => {
                    const value = field.value ? field.value.trim() : '';
                    const fieldType = field.type;
                    const tagName = field.tagName.toLowerCase();

                    // Limpiar estado previo
                    field.classList.remove('is-invalid');

                    let fieldValid = true;

                    if (tagName === 'select') {
                        fieldValid = field.value !== '' && field.value !== null;
                    } else if (fieldType === 'number') {
                        fieldValid = value !== '' && !isNaN(value);
                    } else if (fieldType === 'date') {
                        fieldValid = value !== '';
                    } else if (fieldType === 'time') {
                        fieldValid = value !== '';
                    } else if (fieldType === 'checkbox') {
                        fieldValid = field.checked;
                    } else {
                        fieldValid = value !== '';
                    }

                    // Si el campo es inválido, marcar error
                    if (!fieldValid) {
                        formularioValido = false;
                        field.classList.add('is-invalid');
                        invalidFields.push(field);
                    }
                });

                // Validación adicional de fechas específica
                if (!validarFechasVacas()) {
                    formularioValido = false;
                }

                // MOSTRAR ERRORES
                if (!formularioValido) {
                    showValidationErrorVacas('Por favor complete todos los campos requeridos antes de enviar el formulario.');

                    if (invalidFields.length > 0) {
                        invalidFields[0].scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        invalidFields[0].focus();
                    }
                } else {
                    hideValidationErrorVacas();
                    document.getElementById('vacasForm').submit();
                }
            });

            // Validación en tiempo real
            const requiredFields = document.querySelectorAll('#createVacacionesModal [required]');
            requiredFields.forEach(field => {
                field.addEventListener('blur', function() {
                    validarCampoIndividualVacas(this);
                });
            });
        }

        function validarCampoIndividualVacas(campo) {
            const valor = campo.value ? campo.value.trim() : '';
            const tipo = campo.type;
            const tagName = campo.tagName.toLowerCase();

            let esValido = true;

            if (tagName === 'select') {
                esValido = campo.value !== '' && campo.value !== null;
            } else if (tipo === 'number') {
                esValido = valor !== '' && !isNaN(valor);
            } else if (tipo === 'date' || tipo === 'time') {
                esValido = valor !== '';
            } else if (tipo === 'checkbox') {
                esValido = campo.checked;
            } else {
                esValido = valor !== '';
            }

            if (esValido) {
                campo.classList.remove('is-invalid');
            } else {
                campo.classList.add('is-invalid');
            }

            return esValido;
        }

        function validarFechasVacas() {
            const fechaInicio = document.getElementById('fechaInicioVacas');
            const fechaFin = document.getElementById('fechaFinalizacionVacas');
            const fechaRegreso = document.getElementById('fechaRegresoLaboralVacas');
            const diasDisponibles = window.diasVacaciones ?? 0;

            let fechasValidas = true;

            // Normalizar hoy (sin hora)
            const hoy = new Date();
            hoy.setHours(0, 0, 0, 0);

            if (fechaInicio.value) {
                const inicio = new Date(fechaInicio.value);
                inicio.setDate(inicio.getDate() + 1);
                inicio.setHours(0, 0, 0, 0);

                if (inicio < hoy) {
                    showValidationErrorVacas('La fecha de inicio no puede ser anterior a hoy.');
                    fechaInicio.classList.add('is-invalid');
                    fechasValidas = false;
                }
            }

            if (fechaInicio.value && fechaFin.value) {
                const inicio = new Date(fechaInicio.value);
                const fin = new Date(fechaFin.value);

                if (fin < inicio) {
                    showValidationErrorVacas('La fecha de fin no puede ser anterior a la fecha de inicio.');
                    fechaFin.classList.add('is-invalid');
                    fechasValidas = false;
                } else {
                    // Calcular la diferencia en días entre fecha inicio y fecha fin
                    // Agregamos 1 para incluir tanto el día de inicio como el de fin
                    const diferenciaMs = fin - inicio;
                    const diasSolicitados = Math.floor(diferenciaMs / (1000 * 60 * 60 * 24)) + 1;

                    // Validar que no exceda los días disponibles
                    if (diasSolicitados > diasDisponibles) {
                        showValidationErrorVacas(`No tiene suficientes días de vacaciones disponibles.
                            Solicita: ${diasSolicitados} días, Disponibles: ${diasDisponibles} días.`);
                        fechaFin.classList.add('is-invalid');
                        fechasValidas = false;
                    }
                }
            }

            if (fechaRegreso.value && fechaFin.value) {
                const fin = new Date(fechaFin.value);
                const regreso = new Date(fechaRegreso.value);

                if (regreso < fin) {
                    showValidationErrorVacas('La fecha de regreso laboral no puede ser anterior a la fecha de fin de las vacaciones.');
                    fechaRegreso.classList.add('is-invalid');
                    fechasValidas = false;
                }
            }

            return fechasValidas;
        }

        function showValidationErrorVacas(mensaje) {
            hideValidationErrorVacas();

            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show';
            alertDiv.innerHTML = `
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                ${mensaje}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            const validationContainer = document.getElementById('validationAlertsVacas');
            if (validationContainer) {
                validationContainer.appendChild(alertDiv);
            }
        }

        function hideValidationErrorVacas() {
            const validationContainer = document.getElementById('validationAlertsVacas');
            if (validationContainer) {
                validationContainer.innerHTML = '';
            }
        }

        // VALIDACIÓN EN TIEMPO REAL PARA FECHAS
        document.addEventListener('DOMContentLoaded', function() {
            const fechaFields = ['fechaInicioVacas', 'fechaFinalizacionVacas', 'fechaRegresoLaboralVacas'];

            fechaFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (field) {
                    field.addEventListener('change', function() {
                        if (this.classList.contains('is-invalid')) {
                            validarCampoIndividualVacas(this);
                        }
                        validarFechasVacas();
                    });
                }
            });
        });
    </script>
</body>
</html>