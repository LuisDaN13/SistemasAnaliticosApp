                            @if (Model.Citas != null && Model.Citas.Any())
                            {
                                @foreach (var item in Model.Citas)
                                {
                                    <div class="permission-details mt-2">
                                        <div class="permission-card m-3 p-3 pb-0" style="background-color: #dae9ff; border-bottom: 1px solid #d7d7d7; border-radius: 9px;">
