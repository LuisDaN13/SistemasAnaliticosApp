                                                    <div>
                                                        <h3 class="fw-semibold mb-0">@item.nombreEmpleado</h3>
                                                    </div>
                                                </div>
                                                <span class="badge bg-success bg-opacity-10 text-success">@item.estado</span>
                                            </div>

                                            <div class="row g-2 small mb-3" style="margin-left: 8%">
                                                <div class="col">
                                                    <p class="text-muted mb-0">Creación</p>
                                                    <p class="fw-medium mb-0">@item.fechaIngreso.ToString("dd MMM yyyy")</p>
                                                </div>
                                                <div class="col">
                                                    <p class="text-muted mb-0">Inicio</p>
                                                    <p class="fw-medium mb-0">@item.fechaInicio?.ToString("dd MMM yyyy")</p>
