    <script>
        // Mostrar la imagen en el modal
        function mostrarImagenModal(base64) {
            var modalImg = document.getElementById("modalFoto");
            modalImg.src = "data:image/jpeg;base64," + base64;

            // Guardar el Base64 para descargar luego
            modalImg.dataset.base64 = base64;
        }

        // Descargar la imagen cuando se hace clic en el botón
        document.getElementById("descargarFotoBtn").addEventListener("click", function () {
            var modalImg = document.getElementById("modalFoto");
            var base64 = modalImg.dataset.base64;

            if (!base64) return;

            // Crear enlace de descarga temporal
            var a = document.createElement("a");
            a.href = "data:image/jpeg;base64," + base64;
            a.download = "imagenPermiso.jpg";
            a.click();
        });
    </script>

