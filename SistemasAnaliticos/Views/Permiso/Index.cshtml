                                                    <p class="text-muted mb-0">Retorno</p>
                                                    <p class="fw-medium mb-0">@item.fechaRegresoLaboral?.ToString("dd MMM yyyy")</p>
                                                </div>
                                                <div class="col">
                                                    <p class="text-muted mb-0">Hora de Cita</p>
                                                    <p class="fw-medium mb-0">@item.horaCita?.ToString("hh:mm tt")</p>
                                                </div>
                                            </div>

                                            <div class="row g-2 small mb-3" style="margin-left: 8%">
                                                <div class="col-3">
                                                    <p class="text-muted mb-0">Motivo</p>
                                                    <p class="mb-0">@item.motivo</p>
                                                </div>
                                                <div class="col-3">
                                                    <p class="text-muted mb-0">Comentario</p>
                                                    <p class="mb-0">@item.comentarios</p>
                                                </div>
                                                <div class="col-3">
                                                    <div class="d-flex">
                                                        <p class="text-muted mb-1 me-5">Foto</p>
                                                        @if (item.foto != null && item.foto.Length > 0)
                                                        {
                                                            var base64foto = Convert.ToBase64String(item.foto);
                                                            <img src="data:image/jpeg;base64,@base64foto"
                                                                 alt="foto"
                                                                 style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px; cursor: pointer;"
                                                                 data-bs-toggle="modal"
                                                                 data-bs-target="#fotoModal"
                                                                 onclick="mostrarImagenModal('@base64foto')" />
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted d-inline-block text-center"
                                                                  style="width: 70px; height: 70px; line-height: 70px; background: #f0f0f0; border-radius: 5px;">
                                                                Sin Foto
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <p class="text-muted mb-1">Archivo adjunto</p>
                                                    <a href="#" class="text-primary text-decoration-none">
                                                        <i class="bi bi-paperclip me-1"></i> documento.pdf
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="permission-card text-center text-muted m-3 p-3" style="background-color: #dae9ff; border-radius: 9px;">
                                    No hay citas médicas registradas.
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- VACACIONES -->
                <div class="accordion-item border-0 mb-3">
                    <div class="border-left-accent1">
                        <button class="category-header collapsed d-flex justify-content-between align-items-center w-100 px-4 py-3 bg-light rounded-end border"
