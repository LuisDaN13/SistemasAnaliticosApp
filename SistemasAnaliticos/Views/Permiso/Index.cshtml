                                                </div>
                                            </div>

                                            <div class="row g-2 small mb-3" style="margin-left: 8%">
                                                <div class="col-3">
                                                    <p class="text-muted mb-0">Comentario</p>
                                                    <p class="mb-0">@item.comentarios</p>
                                                </div>
                                                <div class="col-3">
                                                    <div class="d-flex">
                                                        <p class="text-muted mb-1 me-5">Foto</p>
                                                        @if (item.foto != null && item.foto.Length > 0)
                                                        {
                                                            var base64foto = Convert.ToBase64String(item.foto);
                                                            <img src="data:image/jpeg;base64,@base64foto"
                                                                 alt="foto"
                                                                 style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px; cursor: pointer;"
                                                                 data-bs-toggle="modal"
                                                                 data-bs-target="#fotoModal"
                                                                 onclick="mostrarImagenModal('@base64foto')" />
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted d-inline-block text-center"
                                                                  style="width: 70px; height: 70px; line-height: 70px; background: #f0f0f0; border-radius: 5px;">
                                                                Sin Foto
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <p class="text-muted mb-1">Archivo adjunto</p>
                                                    <a href="#" class="text-primary text-decoration-none">
                                                        <i class="bi bi-paperclip me-1"></i> documento.pdf
