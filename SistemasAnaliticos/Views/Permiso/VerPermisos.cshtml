    <script>
        function mostrarImagenModal(base64) {
            var modalImg = document.getElementById("modalFoto");
            modalImg.src = "data:image/jpeg;base64," + base64;
        }
    </script>
    <script>
        // Función para obtener icono según tipo de archivo
        function obtenerIconoArchivo(nombreArchivo, tipoMIME) {
            const extension = obtenerExtension(nombreArchivo).toLowerCase();

            const iconos = {
                'pdf': 'bi-file-pdf',
                'doc': 'bi-file-word',
                'docx': 'bi-file-word',
                'xls': 'bi-file-excel',
                'xlsx': 'bi-file-excel',
                'ppt': 'bi-file-ppt',
                'pptx': 'bi-file-ppt',
                'jpg': 'bi-file-image',
                'jpeg': 'bi-file-image',
                'png': 'bi-file-image',
                'gif': 'bi-file-image',
                'zip': 'bi-file-zip',
                'rar': 'bi-file-zip'
            };

            const icono = iconos[extension] || 'bi-file-earmark';
            return `<i class="bi ${icono} me-1"></i>`;
        }

        // Función para obtener extensión del archivo
        function obtenerExtension(nombreArchivo) {
            return nombreArchivo.split('.').pop() || 'file';
        }

        // Función para formatear tamaño de archivo
        function formatearTamanoArchivo(bytes) {
            if (bytes === 0 || !bytes) return '0 B';

            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));

            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
    </script>
    <script>
        const permisosPaginaActual = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Permisos));
        const totalPaginas = @Model.TotalPaginas;
        let paginaActual = @Model.PaginaActual;

        const permissionsContainer = document.getElementById("permissionsContainer");
        const pagination = document.getElementById("pagination");

        // Estado global - cargar TODOS los permisos una sola vez
        let todosLosPermisos = [];
        let permisosFiltrados = [];

        // Estado de los filtros
        let filtrosActivos = {
            tipos: [],
            estados: []
        };

        // Mapear estado del backend al frontend
        function mapearEstado(estadoBackend) {
            if (estadoBackend === "Creada" || estadoBackend === "Aprobada") {
                return "Aprobado";
            } else if (estadoBackend === "Pendiente") {
                return "Pendiente";
            } else if (estadoBackend === "Rechazada") {
                return "Rechazado";
            }
            return estadoBackend;
        }

        // Cargar TODOS los permisos del servidor (solo una vez)
        async function cargarTodosLosPermisos() {
            try {
                const response = await fetch('/Permiso/ObtenerTodosLosPermisos');
                if (response.ok) {
                    todosLosPermisos = await response.json();
                    return todosLosPermisos;
                } else {
                    console.error('Error al cargar permisos:', response.status);
                    // Si falla, usar solo los de la página actual
                    todosLosPermisos = permisosPaginaActual;
                    return todosLosPermisos;
                }
            } catch (error) {
                console.error('Error cargando permisos:', error);
                todosLosPermisos = permisosPaginaActual;
                return todosLosPermisos;
            }
        }

        // Inicializar contadores con TODOS los permisos
        async function inicializarContadores() {
            if (todosLosPermisos.length === 0) {
                await cargarTodosLosPermisos();
            }

            const contadoresTipo = {
                'Cita Médica': 0,
                'Vacaciones': 0,
                'Incapacidad': 0,
                'Teletrabajo': 0,
                'Especial': 0
            };

            const contadoresEstado = {
                'Aprobado': 0,
                'Pendiente': 0,
                'Rechazado': 0
            };

            // Contar TODOS los permisos
            todosLosPermisos.forEach(permiso => {
                if (contadoresTipo.hasOwnProperty(permiso.tipo)) {
                    contadoresTipo[permiso.tipo]++;
                }

                const estadoFrontend = mapearEstado(permiso.estado);
                if (contadoresEstado.hasOwnProperty(estadoFrontend)) {
                    contadoresEstado[estadoFrontend]++;
                }
            });

            // Actualizar contadores en la UI
            document.getElementById('count-medical').textContent = `(${contadoresTipo['Cita Médica']})`;
            document.getElementById('count-vacation').textContent = `(${contadoresTipo['Vacaciones']})`;
            document.getElementById('count-incapacidad').textContent = `(${contadoresTipo['Incapacidad']})`;
            document.getElementById('count-teletrabajo').textContent = `(${contadoresTipo['Teletrabajo']})`;
            document.getElementById('count-especial').textContent = `(${contadoresTipo['Especial']})`;

            document.getElementById('count-approved').textContent = `(${contadoresEstado['Aprobado']})`;
            document.getElementById('count-pending').textContent = `(${contadoresEstado['Pendiente']})`;
            document.getElementById('count-rejected').textContent = `(${contadoresEstado['Rechazado']})`;
        }

        // Función para filtrar permisos (usa TODOS los permisos)
        async function filtrarPermisos() {
            if (todosLosPermisos.length === 0) {
                await cargarTodosLosPermisos();
            }

            permisosFiltrados = todosLosPermisos.filter(permiso => {
                // Filtrar por tipo
                const coincideTipo = filtrosActivos.tipos.length === 0 ||
                                   filtrosActivos.tipos.includes(permiso.tipo);

                // Filtrar por estado
                const estadoFrontend = mapearEstado(permiso.estado);
                const coincideEstado = filtrosActivos.estados.length === 0 ||
                                     filtrosActivos.estados.includes(estadoFrontend);

                return coincideTipo && coincideEstado;
            });

            return permisosFiltrados;
        }

        // Función para aplicar fade out
        function fadeOut(element, callback) {
            element.style.transition = 'opacity 0.3s ease';
            element.style.opacity = '0';

            setTimeout(() => {
                callback();
                // Restaurar opacidad después de cambiar el contenido
                setTimeout(() => {
                    element.style.opacity = '1';
                }, 50);
            }, 300);
        }

        // Función para aplicar fade in
        function fadeIn(element) {
            element.style.transition = 'opacity 0.3s ease';
            element.style.opacity = '0';

            // Pequeño delay para que el fade out termine
            setTimeout(() => {
                element.style.opacity = '1';
            }, 50);
        }

        // Función para renderizar permisos con efectos de fade
        async function renderPermissionsWithFade(data) {
            fadeOut(permissionsContainer, () => {
                renderPermissions(data);
            });
        }

        // Función para renderizar permisos
        function renderPermissions(data) {
            if (data.length === 0) {
                permissionsContainer.innerHTML = `
                    <div class="no-results">
                        <i class="bi bi-inbox display-1 d-block mb-3"></i>
                        <h3 class="h4 text-muted">No se encontraron permisos</h3>
                        <p class="text-muted">Intenta ajustar los filtros para ver más resultados.</p>
                    </div>
                `;
                // Aplicar fade in al contenido vacío
                fadeIn(permissionsContainer);
                return;
            }

            permissionsContainer.innerHTML = data.map(permission => `
            <div class="card permission-card mb-3">
                    <div class="card-body">
                        <div class="mb-2"
                         style="cursor: pointer;"
                         onclick="window.location.href='/Permiso/Details/${permission.idPermiso}'">
                            <div class="d-flex align-items-start justify-content-between gap-1 mb-2 flex-wrap">
                                <h3 class="h6 fw-bold text-dark mb-0" style="padding: 5px">
                                    <i class="fa-solid fa-user me-3"></i>${permission.nombreEmpleado}
                                </h3>
                                <h5 class="h6 text-white small mb-0" style="padding: 5px; background-color: #012473; border-radius: 5px">
                                    #${permission.idPermiso}
                                </h5>
                            </div>
                            <div class="d-flex align-items-center flex-wrap mb-2" style="gap: 1.5rem; padding-left: 5%; padding-right: 5%;">
                                <span class="badge custom-badge ${
                                    permission.estado === "Creada" || permission.estado === "Aprobada"
                                        ? "bg-success"
                                        : permission.estado === "Pendiente"
                                            ? "bg-warning"
                                            : permission.estado === "Rechazada"
                                                ? "bg-danger"
                                                : "bg-secondary"
                                }">
                                    ${permission.estado}
                                </span>
                                <span class="badge custom-badge"
                                      style="
                                        background-color: ${
                                            permission.tipo === 'Cita Médica' ? '#F58E53' :
                                            permission.tipo === 'Vacaciones' ? '#dc3545' :
                                            permission.tipo === 'Incapacidad' ? '#ffc107' :
                                            permission.tipo === 'Teletrabajo' ? '#17a2b8' :
                                            permission.tipo === 'Especial' ? '#AA80D9' :
                                            '#6c757d'
                                        };
                                        color: #fff;
                                      ">
                                    ${permission.tipo}
                                </span>

                                <div class="row small d-flex justify-content-around" style="gap: 0.5rem">
                                    <div class="col-2">
                                        <span class="text-muted fw-semibold">Creación:</span>
                                        <span class="text-dark fw-medium ms-1">${new Date(permission.fechaIngreso).toLocaleDateString('es-CR')}</span>
                                    </div>
                                    <div class="col-2">
                                        <span class="text-muted fw-semibold">Inicio:</span>
                                        <span class="text-dark fw-medium ms-1">${new Date(permission.fechaInicio).toLocaleDateString('es-CR')}</span>
                                    </div>
                                    <div class="col-2">
                                        <span class="text-muted fw-semibold">Fin:</span>
                                        <span class="text-dark fw-medium ms-1">${new Date(permission.fechaFinalizacion).toLocaleDateString('es-CR')}</span>
                                    </div>
                                    <div class="col-2">
                                        <span class="text-muted fw-semibold">Regreso:</span>
                                        <span class="text-dark fw-medium ms-1">${new Date(permission.fechaRegresoLaboral).toLocaleDateString('es-CR')}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pt-2 border-top">
                            <div class="row small d-flex align-items-center flex-wrap justify-content-around" style="gap: 0.5rem; padding-left: 5%; padding-right: 5%;">
                                <div class="col-2">
                                    <span class="text-muted fw-semibold d-block">Motivo:</span>
                                    <span class="text-dark fw-medium ms-1" d-block>${permission.motivo ?? 'Sin motivo'}</span>
                                </div>
                                <div class="col-2">
                                    <span class="text-muted fw-semibold d-block">Comentarios:</span>
                                    <span class="text-dark fw-medium ms-1" d-block>${permission.comentarios ?? 'Sin comentario'}</span>
                                </div>
                                <div class="col-2">
                                    <span class="text-muted fw-semibold d-block">Foto:</span>
                                    ${
                                    permission.foto && permission.foto.trim() !== ''
                                        ? `<img src="data:image/jpeg;base64,${permission.foto}"
                                                alt="foto"
                                                style="width:25px; height:25px; object-fit:cover; border-radius:5px; cursor:pointer;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#fotoModal"
                                                onclick="mostrarImagenModal('${permission.foto}')">`
                                        : `<span class="text-muted d-inline-block text-center"
                                                style="width:25px; height:25px; line-height:25px; background:#f0f0f0; border-radius:5px;">
                                            Sin foto
                                            </span>`
                                    }
                                </div>
                                <div class="col-2">
                                    ${
                                        permission.nombreArchivo && permission.nombreArchivo.trim() !== ''
                                            ? `
                                                <div class="mt-1">
                                                    <a href="/Permiso/descargar-adjunto/${permission.idPermiso}"
                                                        class="btn btn-sm btn-outline-primary d-flex align-items-center"
                                                        style="font-size: 0.75rem; padding: 0.25rem 0.5rem;"
                                                        title="Descargar ${permission.nombreArchivo}">
                                                        ${obtenerIconoArchivo(permission.nombreArchivo, permission.tipoMIME)}
                                                        <span class="text-truncate d-block" style="max-width: 80px;">
                                                            ${permission.nombreArchivo}
                                                        </span>
                                                    </a>
                                                    <small class="text-muted text-center d-block mt-1">
                                                        ${formatearTamanoArchivo(permission.tamanoArchivo)} •
                                                        ${obtenerExtension(permission.nombreArchivo)}
                                                    </small>
                                                </div>
                                            `
                                            : `
                                                <span class="text-muted d-inline-block text-center small"
                                                        style="width:100%; padding: 0.25rem; background:#f0f0f0; border-radius:5px;">
                                                    Sin archivo
                                                </span>
                                            `
                                        }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            // Aplicar fade in al nuevo contenido
            fadeIn(permissionsContainer);
        }

        function renderPagination() {
            pagination.innerHTML = '';
            for (let i = 1; i <= totalPaginas; i++) {
                pagination.innerHTML += `
                    <li class="page-item ${i === paginaActual ? 'active' : ''}">
                        <a class="page-link" href="?page=${i}">${i}</a>
                    </li>
                `;
            }
        }

        // Event listeners para filtros con efectos de fade
        document.querySelectorAll('.filter-type').forEach(checkbox => {
            checkbox.addEventListener('change', async function() {
                if (this.checked) {
                    filtrosActivos.tipos.push(this.value);
                } else {
                    filtrosActivos.tipos = filtrosActivos.tipos.filter(tipo => tipo !== this.value);
                }
                const permisosFiltrados = await filtrarPermisos();
                await renderPermissionsWithFade(permisosFiltrados);
                // Ocultar paginación cuando hay filtros activos
                pagination.style.display = (filtrosActivos.tipos.length > 0 || filtrosActivos.estados.length > 0) ? 'none' : 'flex';
            });
        });

        document.querySelectorAll('.filter-status').forEach(checkbox => {
            checkbox.addEventListener('change', async function() {
                if (this.checked) {
                    filtrosActivos.estados.push(this.value);
                } else {
                    filtrosActivos.estados = filtrosActivos.estados.filter(estado => estado !== this.value);
                }
                const permisosFiltrados = await filtrarPermisos();
                await renderPermissionsWithFade(permisosFiltrados);
                // Ocultar paginación cuando hay filtros activos
                pagination.style.display = (filtrosActivos.tipos.length > 0 || filtrosActivos.estados.length > 0) ? 'none' : 'flex';
            });
        });

        // Limpiar filtros con efecto de fade
        document.getElementById('clear-filters').addEventListener('click', function() {
            // Desmarcar todos los checkboxes
            document.querySelectorAll('.filter-type, .filter-status').forEach(checkbox => {
                checkbox.checked = false;
            });

            // Limpiar filtros activos
            filtrosActivos.tipos = [];
            filtrosActivos.estados = [];

            // Renderizar todos los permisos de la página actual con fade
            renderPermissionsWithFade(permisosPaginaActual);
            pagination.style.display = 'flex';
        });

        // Inicializar con efecto de fade
