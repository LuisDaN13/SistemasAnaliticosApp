@model SistemasAnaliticos.Entidades.Permiso

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(4px);
        }

        .modal-header {
            background: linear-gradient(to right, #012473, #013599);
            color: white;
        }

        .btn-primary-custom {
            background-color: #012473;
            border-color: #012473;
        }

            .btn-primary-custom:hover {
                background-color: #013599;
                border-color: #013599;
            }

        .section-divider {
            border-top: 1px solid #dee2e6;
            padding-top: 1.25rem;
        }
    </style>
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="createOtrosPermisosModal" tabindex="-1" aria-labelledby="createOtrosPermisosModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="permissionModalLabel">Nueva Solicitud de Permiso <span id="tipoTexto"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Form -->
                <form id="otrosForm" asp-controller="Permiso" asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="tipo" id="tipoPermiso" value="" />
                    
                    <div class="modal-body">
                        <div>
                            <!-- Fechas y Días -->
                            <div class="row mb-3">
                                <div class="col-md-4 mt-1 mb-2">
                                    <label for="startDate" class="form-label fw-semibold">
                                        Fecha Inicio <span class="text-danger">*</span>
                                    </label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaInicio"
                                           required>
                                </div>
                                <div class="col-md-4 mt-1 mb-2">
                                    <label for="endDate" class="form-label fw-semibold">
                                        Fecha Fin <span class="text-danger">*</span>
                                    </label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaFinalizacion"
                                           required>
                                </div>

                                <div class="col-md-4 mt-1 mb-2">
                                    <label for="endDate" class="form-label fw-semibold">
                                        Fecha de Regreso Laboral <span class="text-danger">*</span>
                                    </label>
                                    <input type="date"
                                           class="form-control"
                                           asp-for="fechaRegresoLaboral"
                                           required>
                                </div>
                            </div>
                        </div>

                        <div class="section-divider p-0 row">
                            <!-- Motivo -->
                            <div class="col-md-6 mt-3 mb-3">
                                <label for="reason" class="form-label fw-semibold">
                                    Motivo <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control"
                                          asp-for="motivo"
                                          rows="3"
                                          placeholder="Describe el motivo de la cita..."
                                          required></textarea>
                            </div>
                            <div class="col-md-6 mt-3 mb-3">
                                <label for="reason" class="form-label fw-semibold">
                                    Comentarios
                                </label>
                                <textarea class="form-control"
                                          asp-for="comentarios"
                                          rows="3"
                                          placeholder="Nota..."
                                          required></textarea>
                            </div>
                        </div>

                        <div class="section-divider">
                            <!-- Foto -->
                            <div>
                                <div>
                                    <label class="form-label fw-semibold">Foto relacionada</label>
                                    <input asp-for="fotoFile" type="file" class="form-control" @* accept=".jpg,.jpeg,.png" *@ />
                                    @*                                     <div class="form-text" style="">Solamente imagenes tipo (JPG, JPEG o PNG)</div>
 *@                                </div>
                            </div>

                            <!-- Datos Adjuntos -->
                            <div class="mt-4">
                                <label class="form-label fw-semibold">Datos Adjuntos</label>
                                <input asp-for="adjuntoFile" type="file" class="form-control">
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary-custom text-white">
                            <i class="bi bi-save me-2"></i>Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Pasar palabra de los Botones -->
    <script>
        const modal = document.getElementById('createOtrosPermisosModal');

        modal.addEventListener('show.bs.modal', function (event) {
            // El botón que abrió el modal
            const button = event.relatedTarget;

            // Obtiene el valor del atributo personalizado
            const tipo = button.getAttribute('data-tipo');

            // Muestra el texto en el header del modal
            document.getElementById('tipoTexto').textContent = tipo;

            // Asigna el valor al input hidden
            document.getElementById('tipoPermiso').value = tipo;
        });
    </script>

    <!-- JavaScript para la funcionalidad -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('permissionForm');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const daysInput = document.getElementById('days');

            // Función para calcular días
            function calculateDays() {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);

                if (startDate && endDate && startDate <= endDate) {
                    const diffTime = Math.abs(endDate.getTime() - startDate.getTime());
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                    daysInput.value = diffDays;
                } else {
                    daysInput.value = '';
                }
            }

            // Event listeners para calcular días cuando cambian las fechas
            startDateInput.addEventListener('change', calculateDays);
            endDateInput.addEventListener('change', calculateDays);

            // Manejar el envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Recopilar datos del formulario
                const formData = {
                    employeeId: document.getElementById('employeeId').value,
                    employeeName: document.getElementById('employeeName').value,
                    permissionType: document.getElementById('permissionType').value,
                    startDate: startDateInput.value,
                    endDate: endDateInput.value,
                    days: daysInput.value,
                    reason: document.getElementById('reason').value,
                    status: document.getElementById('status').value,
                    notes: document.getElementById('notes').value
                };

                console.log('Datos del permiso:', formData);

                // Aquí iría la lógica para guardar el permiso
                // ...

                // Cerrar el modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('permissionModal'));
                modal.hide();

                // Resetear el formulario
                form.reset();
            });
        });
    </script>
</body>
</html>